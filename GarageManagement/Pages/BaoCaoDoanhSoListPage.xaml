<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:service="clr-namespace:GarageManagement.Services"
             x:Class="GarageManagement.Pages.BaoCaoDoanhSoListPage"
             x:Name="RootContentView"
             BackgroundColor="{DynamicResource BackgroundColor}">

    <ContentView.Resources>
        <ResourceDictionary>
            <service:DeleteModeTextConverter x:Key="DeleteModeTextConverter" />
        </ResourceDictionary>
    </ContentView.Resources>

    <ScrollView>
        <VerticalStackLayout Padding="30" Spacing="20" MaximumWidthRequest="1000">

            <!-- Tiêu đề -->
            <Frame HasShadow="True"
                   BackgroundColor="{DynamicResource CardBackgroundColor}"
                   Padding="20">
                <Label Text="QUẢN LÝ BÁO CÁO DOANH SỐ"
                       FontSize="20"
                       FontAttributes="Bold"
                       FontFamily="OpenSans-SemiBold"
                       TextColor="{DynamicResource TextColor}"
                       HorizontalOptions="Center" />
            </Frame>

            <!-- Các nút chức năng -->
            <HorizontalStackLayout Spacing="12" HorizontalOptions="Start">
                <Button Text="Thêm"
                        Command="{Binding AddCommand}"
                        BackgroundColor="#3B82F6"
                        TextColor="White"
                        HeightRequest="48"
                        FontAttributes="Bold"
                        FontFamily="OpenSans-SemiBold" />

                <Button Text="{Binding IsDeleteMode, Converter={StaticResource DeleteModeTextConverter}}"
                        Command="{Binding ToggleDeleteModeCommand}"
                        BackgroundColor="#3B82F6"
                        TextColor="White"
                        HeightRequest="48"
                        FontAttributes="Bold"
                        FontFamily="OpenSans-SemiBold" />

                <Button Text="Xoá các mục đã chọn"
                        Command="{Binding DeleteCommand}"
                        IsVisible="{Binding IsDeleteMode}"
                        BackgroundColor="#EF4444"
                        TextColor="White"
                        HeightRequest="48"
                        FontAttributes="Bold"
                        FontFamily="OpenSans-SemiBold" />
            </HorizontalStackLayout>

            <!-- Tiêu đề bảng -->
            <Frame HasShadow="True"
                   BackgroundColor="{DynamicResource CardBackgroundColor}"
                   Padding="20">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="1*" />
                        <ColumnDefinition Width="1*" />
                        <ColumnDefinition Width="1*" />
                    </Grid.ColumnDefinitions>
                    <Label Text="" Grid.Column="0" />
                    <Label Text="STT" Grid.Column="1" FontAttributes="Bold" TextColor="{DynamicResource TextColor}" HorizontalTextAlignment="Center" />
                    <Label Text="Tháng" Grid.Column="2" FontAttributes="Bold" TextColor="{DynamicResource TextColor}" HorizontalTextAlignment="Center" />
                    <Label Text="Tổng Doanh Thu" Grid.Column="3" FontAttributes="Bold" TextColor="{DynamicResource TextColor}" HorizontalTextAlignment="Center" />
                </Grid>
            </Frame>

            <!-- Danh sách báo cáo -->
            <CollectionView ItemsSource="{Binding BaoCaoList}">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame HasShadow="True"
                               BackgroundColor="{DynamicResource CardBackgroundColor}"
                               Padding="20"
                               Margin="0,12,0,0">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="1*" />
                                    <ColumnDefinition Width="1*" />
                                    <ColumnDefinition Width="1*" />
                                </Grid.ColumnDefinitions>

                                <CheckBox IsChecked="{Binding IsSelected}"
                                          Grid.Column="0"
                                          Margin="10,0,0,0"
                                          IsVisible="{Binding Path=BindingContext.IsDeleteMode, Source={x:Reference RootContentView}}" />

                                <Label Text="{Binding STT}" Grid.Column="1" HorizontalTextAlignment="Center" TextColor="{DynamicResource TextColor}" />
                                <Label Text="{Binding Thang}" Grid.Column="2" HorizontalTextAlignment="Center" TextColor="{DynamicResource TextColor}" />
                                <Label Text="{Binding TongDoanhThu, StringFormat='{}{0:N0} VNĐ'}" Grid.Column="3" HorizontalTextAlignment="Center" TextColor="{DynamicResource TextColor}" />
                            </Grid>
                            <Frame.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding Source={x:Reference RootContentView}, Path=BindingContext.ViewDetailCommand}"
                                                      CommandParameter="{Binding Id}" />
                            </Frame.GestureRecognizers>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
                <CollectionView.ItemsLayout>
                    <LinearItemsLayout Orientation="Vertical" ItemSpacing="10" />
                </CollectionView.ItemsLayout>
            </CollectionView>

        </VerticalStackLayout>
    </ScrollView>
</ContentView>
