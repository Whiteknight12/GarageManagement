<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:GarageManagement.Pages"
             x:Class="GarageManagement.Pages.ChatBotPage"
             xmlns:service="clr-namespace:GarageManagement.Services"
             BackgroundColor="{DynamicResource BackgroundColor}"
             x:Name="ChatPage">

    <ContentView.Resources>
        <ResourceDictionary>
            <service:MessageColorConverter x:Key="BoolToColorConverter" />
        </ResourceDictionary>
    </ContentView.Resources>
    
    <VerticalStackLayout Padding="10" Spacing="10" MaximumWidthRequest="1000">
        <CollectionView ItemsSource="{Binding Messages}" HeightRequest="500">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame BackgroundColor="{Binding IsUser, Converter={StaticResource BoolToColorConverter}}"
                           CornerRadius="12" Padding="8">
                        <Label 
                            TextColor="{DynamicResource TextColor}"
                            Text="{Binding Text}" />
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <HorizontalStackLayout Spacing="10">
            <Entry x:Name="InputBox" 
                   Placeholder="Nhập tin nhắn..." 
                   Text="{Binding CurrentMessage, Mode=TwoWay}"
                   TextColor="{DynamicResource TextColor}"
                   HorizontalOptions="FillAndExpand"/>
            <Button Text="Gửi" Command="{Binding SendMessageCommand}"/>
        </HorizontalStackLayout>
    </VerticalStackLayout>
</ContentView>
