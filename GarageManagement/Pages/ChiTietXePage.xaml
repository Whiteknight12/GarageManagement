<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GarageManagement.Pages.ChiTietXePage"
             xmlns:viewmodel="clr-namespace:GarageManagement.ViewModels"
             BackgroundColor="{DynamicResource BackgroundColor}">

    <ScrollView>
        <VerticalStackLayout Spacing="20" Padding="20" MaximumWidthRequest="1000">
            <Frame BackgroundColor="{DynamicResource CardBackgroundColor}"
                   CornerRadius="10"
                   Padding="15"
                   HasShadow="True">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <Label Text="Chi Tiết Xe" 
                           TextColor="{DynamicResource TextColor}" 
                           FontSize="30" 
                           HorizontalOptions="Center" 
                           FontAttributes="Bold"/>
                </Grid>
            </Frame>

            <Frame BackgroundColor="{DynamicResource CardBackgroundColor}"
                   CornerRadius="10"
                   Padding="15"
                   HasShadow="True">
                <VerticalStackLayout Spacing="15">
                    <VerticalStackLayout>
                        <Label Text="Tên xe"
                           FontSize="16"
                           FontAttributes="Bold"
                           TextColor="{DynamicResource TextColor}"/>
                        <Entry Text="{Binding Name, Mode=TwoWay}"
                           IsReadOnly="{Binding IsReadOnly}"
                           FontSize="16"
                           TextColor="{DynamicResource TextColor}" />
                    </VerticalStackLayout>

                    <VerticalStackLayout>
                        <Label Text="Hiệu xe"
                           FontSize="16"
                           FontAttributes="Bold"
                           TextColor="{DynamicResource TextColor}"/>
                        <Picker 
                           ItemsSource="{Binding ListHieuXe}"
                           IsEnabled="{Binding IsUpdating}"
                           ItemDisplayBinding="{Binding TenHieuXe}"
                           SelectedItem="{Binding SelectedHieuXe}"
                           FontSize="16"
                           TextColor="{DynamicResource TextColor}" />
                    </VerticalStackLayout>

                    <VerticalStackLayout>
                        <Label Text="Biển số"
                               FontSize="16"
                               FontAttributes="Bold"
                               TextColor="{DynamicResource TextColor}"/>
                        <Entry Text="{Binding BienSo, Mode=TwoWay}"
                               FontSize="16"
                               IsReadOnly="{Binding IsReadOnly}"
                               TextColor="{DynamicResource TextColor}" />
                    </VerticalStackLayout>

                    <VerticalStackLayout>
                        <Label Text="Tiền nợ của xe:"
           FontSize="16"
           FontAttributes="Bold"
           TextColor="{DynamicResource TextColor}"/>
                        <Entry Text="{Binding TienNoCuaXe, Mode=TwoWay}"
           FontSize="16"
           IsReadOnly="{Binding IsReadOnly}"
           TextColor="{DynamicResource TextColor}" />
                    </VerticalStackLayout>

                    <VerticalStackLayout>

                        <Label Text="Trạng thái:"
                           FontSize="16"
                           FontAttributes="Bold"
                           TextColor="{DynamicResource TextColor}" />

                        <Picker ItemsSource="{Binding ListTrangThaiXe}"
                            SelectedItem="{Binding SelectedTrangThaiXe}"
                            BackgroundColor="{DynamicResource InputBackgroundColor}"
                            TextColor="{DynamicResource TextColor}"
                            IsEnabled="{Binding IsUpdating}"
                            FontSize="16" />

                    </VerticalStackLayout>

                    <BoxView/>

                    <Label Text="Chọn chủ xe"
                       FontSize="16"
                       IsVisible="{Binding IsUpdating}"
                       FontAttributes="Bold"
                       TextColor="{DynamicResource TextColor}"/>
                    <Picker ItemsSource="{Binding ListKhachHang}"
                            SelectedIndexChanged="SelectedKhachHangChanged"
                            ItemDisplayBinding="{Binding HoVaTen}"
                            TextColor="{DynamicResource TextColor}"
                            SelectedItem="{Binding SelectedKhachHang}"
                            BackgroundColor="{DynamicResource InputBackgroundColor}"
                            IsVisible="{Binding IsUpdating}"/>

                    <Frame HasShadow="True"
                        BackgroundColor="{DynamicResource CardBackgroundColor}"
                        Padding="20"
                        IsVisible="{Binding IsUpdating}"
                        CornerRadius="8">
                        <Grid RowSpacing="10" ColumnSpacing="10">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <Label Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2"
                               Text="Lọc tài khoản theo: CCCD/Tên/Email/Số điện thoại"
                               FontSize="16"
                               FontAttributes="Bold"
                               FontFamily="OpenSans-Regular"
                               TextColor="{DynamicResource TextColor}"
                               VerticalOptions="Center"/>

                            <Entry Grid.Row="1" Grid.Column="0"
                                BackgroundColor="{DynamicResource InputBackgroundColor}"
                                TextColor="{DynamicResource TextColor}"
                                Text="CCCD"
                                IsReadOnly="True"/>

                            <Entry Grid.Row="1" Grid.Column="1"
                               Placeholder="Nhập giá trị lọc"
                               PlaceholderColor="{DynamicResource PlaceholderColor}"
                               Text="{Binding CCCDValue, Mode=TwoWay}"
                               FontSize="16"
                               FontFamily="OpenSans-Regular"
                               TextColor="{DynamicResource TextColor}"
                               HeightRequest="45"
                               Margin="0,5,0,0"/>

                            <Entry Grid.Row="2" Grid.Column="0"
                                BackgroundColor="{DynamicResource InputBackgroundColor}"
                                TextColor="{DynamicResource TextColor}"
                                Text="Tên"
                                IsReadOnly="True"/>

                            <Entry Grid.Row="2" Grid.Column="1"
                               Placeholder="Nhập giá trị lọc"
                               PlaceholderColor="{DynamicResource PlaceholderColor}"
                               Text="{Binding NameValue, Mode=TwoWay}"
                               FontSize="16"
                               FontFamily="OpenSans-Regular"
                               TextColor="{DynamicResource TextColor}"
                               HeightRequest="45"
                               Margin="0,5,0,0"/>

                            <Entry Grid.Row="3" Grid.Column="0"
                                BackgroundColor="{DynamicResource InputBackgroundColor}"
                                TextColor="{DynamicResource TextColor}"
                                Text="Email"
                                IsReadOnly="True"/>

                            <Entry Grid.Row="3" Grid.Column="1"
                               Placeholder="Nhập giá trị lọc"
                               PlaceholderColor="{DynamicResource PlaceholderColor}"
                               Text="{Binding EmailValue, Mode=TwoWay}"
                               FontSize="16"
                               FontFamily="OpenSans-Regular"
                               TextColor="{DynamicResource TextColor}"
                               HeightRequest="45"
                               Margin="0,5,0,0"/>

                            <Entry Grid.Row="4" Grid.Column="0"
                                BackgroundColor="{DynamicResource InputBackgroundColor}"
                                TextColor="{DynamicResource TextColor}"
                                Text="Số điện thoại"
                                IsReadOnly="True"/>

                            <Entry Grid.Row="4" Grid.Column="1"
                               Placeholder="Nhập giá trị lọc"
                               PlaceholderColor="{DynamicResource PlaceholderColor}"
                               Text="{Binding PhoneValue, Mode=TwoWay}"
                               FontSize="16"
                               FontFamily="OpenSans-Regular"
                               TextColor="{DynamicResource TextColor}"
                               HeightRequest="45"
                               Margin="0,5,0,0"/>

                            <Button Grid.Row="5" 
                                Grid.ColumnSpan="2"
                                Text="Lọc"
                                Command="{Binding FilterCommand}"
                                BackgroundColor="#3B82F6"
                                TextColor="White"
                                HeightRequest="48"
                                FontAttributes="Bold"
                                FontFamily="OpenSans-SemiBold"
                                MaximumWidthRequest="200"
                                CornerRadius="{StaticResource ButtonCornerRadiusHandler}">
                                <VisualStateManager.VisualStateGroups>
                                    <VisualStateGroupList>
                                        <VisualStateGroup x:Name="CommonStates">
                                            <VisualState x:Name="Normal">
                                                <VisualState.Setters>
                                                    <Setter Property="BackgroundColor" Value="#3B82F6" />
                                                </VisualState.Setters>
                                            </VisualState>
                                            <VisualState x:Name="Pressed">
                                                <VisualState.Setters>
                                                    <Setter Property="BackgroundColor" Value="#2563EB" />
                                                </VisualState.Setters>
                                            </VisualState>
                                        </VisualStateGroup>
                                    </VisualStateGroupList>
                                </VisualStateManager.VisualStateGroups>
                            </Button>
                        </Grid>
                    </Frame>

                    <BoxView IsVisible="{Binding IsUpdating}"/>

                    <VerticalStackLayout>
                        <Label Text="Tên chủ xe"
                               FontSize="16"
                               FontAttributes="Bold"
                               TextColor="{DynamicResource TextColor}" />
                        <Label Text="{Binding TenChuXe}"
                               FontSize="16"
                               Margin="15, 10, 0, 0"
                               TextColor="{DynamicResource TextColor}" />
                    </VerticalStackLayout>

                    <BoxView/>

                    <VerticalStackLayout>
                        <Label Text="CCCD"
           FontSize="16"
           FontAttributes="Bold"
           TextColor="{DynamicResource TextColor}" />
                        <Label Text="{Binding CCCD}"
           FontSize="16"
           Margin="15, 10, 0, 0"
           TextColor="{DynamicResource TextColor}" />
                    </VerticalStackLayout>

                    <BoxView/>

                    <VerticalStackLayout>
                        <Label Text="Điện thoại chủ xe"
                               FontAttributes="Bold"
                               FontSize="16"
                               TextColor="{DynamicResource TextColor}" />
                        <Label Text="{Binding DienThoai}"
                               FontSize="16"
                               Margin="15, 10, 0, 0"
                               TextColor="{DynamicResource TextColor}" />
                    </VerticalStackLayout>

                    <BoxView/>

                    <VerticalStackLayout>
                        <Label Text="Địa chỉ chủ xe"
                               FontAttributes="Bold"
                               FontSize="16"
                               TextColor="{DynamicResource TextColor}" />
                        
                        <Label Text="{Binding DiaChi}"
                               FontSize="16"
                               Margin="15, 10, 0, 0"
                               TextColor="{DynamicResource TextColor}" />
                    </VerticalStackLayout>

                    <BoxView/>

                    <VerticalStackLayout>
                        <Label Text="Tiền nợ chủ xe: "
                           FontSize="16"
                           FontAttributes="Bold"
                           TextColor="{DynamicResource TextColor}" />

                        <Label Text="{Binding TienNoCuaChuXe, StringFormat='{0:N0} VNĐ'}"
                           Margin="12, 0, 0, 0"
                           TextColor="#D32F2F"
                           FontSize="16"/>
                    </VerticalStackLayout>
                </VerticalStackLayout>
            </Frame>

            <Button Text="Cập nhật thông tin xe" 
                    Command="{Binding ToggleEditModeCommand}" 
                    BackgroundColor="#10B981" 
                    IsVisible="{Binding IsReadOnly}"
                    TextColor="White"/>

            <Button Text="Cập nhật" 
                Command="{Binding UpdateCarCommand}" 
                BackgroundColor="#10B981" 
                IsVisible="{Binding IsUpdating}"
                TextColor="White"/>

            <Button Text="Hủy" 
                Command="{Binding ExitEditModeCommand}" 
                BackgroundColor="Gray" 
                IsVisible="{Binding IsUpdating}"
                TextColor="White"/>

        </VerticalStackLayout>
    </ScrollView>
</ContentView>