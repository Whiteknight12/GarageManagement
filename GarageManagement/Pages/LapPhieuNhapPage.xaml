<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodel="clr-namespace:GarageManagement.ViewModels"
             xmlns:service="clr-namespace:GarageManagement.Services"
             x:Class="GarageManagement.Pages.LapPhieuNhapPage"
             BackgroundColor="#F9FAFB">

    <ContentPage.Resources>
        <ResourceDictionary>
            <service:PickerConverterService x:Key="IDConverter"/>
        </ResourceDictionary>
    </ContentPage.Resources>

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="16" MaximumWidthRequest="800">
            <Frame CornerRadius="20" BackgroundColor="White" Padding="20" HasShadow="True">
                <VerticalStackLayout Spacing="12">
                    <Label Text="Danh sách Chi Tiết Phiếu Nhập" FontSize="Medium" FontAttributes="Bold" TextColor="#1F2937"/>
                </VerticalStackLayout>
            </Frame>

            <CollectionView ItemsSource="{Binding ListChiTietPhieuNhap}">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame CornerRadius="20" BackgroundColor="White" Padding="20" Margin="0,10" HasShadow="True">
                            <VerticalStackLayout Spacing="10">
                                <Label Text="Loại Vật Tư:" FontAttributes="Bold" TextColor="Black"/>
                                <Picker 
                                    Title="Chọn Vật Tư"
                                    ItemsSource="{Binding Source={RelativeSource AncestorType={x:Type viewmodel:LapPhieuNhapPageViewModel}}, Path=ListVatTu}" 
                                    SelectedItem="{Binding VatTuId, Mode=OneWay, Converter={StaticResource IDConverter}}"
                                    ItemDisplayBinding="{Binding TenLoaiVatTuPhuTung}"
                                    SelectedIndexChanged="OnLoaiVatTuPicked"
                                    BackgroundColor="#F3F4F6"
                                    TextColor="Black"/>

                                <Label Text="Số Lượng:" FontAttributes="Bold" TextColor="Black"/>
                                <Entry Keyboard="Numeric" 
                                       Placeholder="Nhập số lượng"
                                       Text="{Binding SoLuong, Mode=TwoWay}" 
                                       TextChanged="OnSoLuongChanged"
                                       BackgroundColor="#F9FAFB"
                                       TextColor="Black"/>

                                <Label Text="Đơn Giá:" FontAttributes="Bold" TextColor="Black"/>
                                <Entry Keyboard="Numeric" 
                                       Text="{Binding DonGia, Mode=TwoWay}" 
                                       BackgroundColor="#F9FAFB" 
                                       TextColor="Black"
                                       TextChanged="OnDonGiaChanged"/>

                                <Button
                                    Text="Xoá"
                                    BackgroundColor="Red"
                                    TextColor="White"
                                    CornerRadius="10"
                                    Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodel:LapPhieuNhapPageViewModel}}, Path=XoaChiTietPhieuNhapCommand}"
                                    CommandParameter="{Binding .}"/>
                            </VerticalStackLayout>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <Frame CornerRadius="15" BackgroundColor="#F3F4F6" Padding="15">
                <HorizontalStackLayout>
                    <Label Text="Tổng Giá Tiền:" FontSize="16" FontAttributes="Bold" TextColor="#1F2937"/>
                    <Label Text="{Binding TongGiaTien}" FontSize="16" TextColor="#1F2937" Margin="10,0,0,0"/>
                </HorizontalStackLayout>
            </Frame>

            <Button Text="+ Thêm Chi Tiết Phiếu Nhập"
                    Command="{Binding ThemChiTietPhieuNhapCommand}"
                    BackgroundColor="#3B82F6"
                    TextColor="White"
                    CornerRadius="12"
                    HeightRequest="45"
                    FontAttributes="Bold"
                    HorizontalOptions="Start" />

            <Button Text="Lưu phiếu nhập"
                    Command="{Binding LuuPhieuNhapCommand}"
                    BackgroundColor="#10B981"
                    TextColor="White"
                    CornerRadius="12"
                    HeightRequest="50"
                    FontAttributes="Bold"/> 
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
