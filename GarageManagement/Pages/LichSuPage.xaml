<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:GarageManagement.ViewModels"
             x:Class="GarageManagement.Pages.LichSuPage"
             BackgroundColor="{DynamicResource BackgroundColor}">

    <Grid Padding="20">
        <CollectionView ItemsSource="{Binding LichSuList}"
                        SelectionMode="None"
                        EmptyView="Không có lịch sử nào được ghi nhận.">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame Margin="0,5"
                           Padding="15"
                           CornerRadius="12"
                           HasShadow="True"
                           BorderColor="#d3d3d3"
                           BackgroundColor="{DynamicResource CardBackgroundColor}">
                        <VerticalStackLayout Spacing="5">
                            <Label Text="{Binding ThoiDiemThucHien, StringFormat='Thời điểm: {0:dd/MM/yyyy HH:mm}'}"
                                   TextColor="{DynamicResource TextColor}"
                                   FontAttributes="Bold"
                                   FontSize="14"/>
                            <Label Text="{Binding HanhDong}"
                                   FontSize="13"
                                   TextColor="#2a557f"
                                   FontAttributes="Bold"/>
                            <Label Text="{Binding NoiDung}"
                                   FontSize="13"
                                   TextColor="{DynamicResource TextColor}"
                                   LineBreakMode="WordWrap"/>
                            <Label Text="{Binding LoaiThucTheLienQuan}"
                                   FontSize="12"
                                   TextColor="Gray"/>
                        </VerticalStackLayout>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </Grid>
</ContentView>
