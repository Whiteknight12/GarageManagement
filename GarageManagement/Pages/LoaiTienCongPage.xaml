<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GarageManagement.Pages.LoaiTienCongPage"
             x:Name="RootContentView"
             xmlns:service="clr-namespace:GarageManagement.Services"
             BackgroundColor="{DynamicResource BackgroundColor}">

    <ContentView.Resources>
        <ResourceDictionary>
            <service:DeleteModeTextConverter x:Key="DeleteModeTextConverter" />
        </ResourceDictionary>
    </ContentView.Resources>

    <ScrollView>
        <VerticalStackLayout Padding="30" Spacing="20" MaximumWidthRequest="1000">

            <!-- Tiêu đề -->
            <Frame HasShadow="True"
                   BackgroundColor="{DynamicResource CardBackgroundColor}"
                   Padding="20">
                <VerticalStackLayout Spacing="12">
                    <Label Text="Quản Lý Loại Tiền Công" 
                           FontSize="18" 
                           FontAttributes="Bold" 
                           FontFamily="OpenSans-SemiBold"
                           TextColor="{DynamicResource TextColor}"
                           HorizontalOptions="Start"/>
                </VerticalStackLayout>
            </Frame>

            <!-- Các nút chức năng -->
            <HorizontalStackLayout Spacing="12" HorizontalOptions="Start">
                <Button Text="Thêm"
                        Command="{Binding AddCommand}" 
                        BackgroundColor="#3B82F6"
                        TextColor="White"
                        HeightRequest="48"
                        FontAttributes="Bold"
                        FontFamily="OpenSans-SemiBold">
                    <VisualStateManager.VisualStateGroups>
                        <VisualStateGroupList>
                            <VisualStateGroup x:Name="CommonStates">
                                <VisualState x:Name="Normal">
                                    <VisualState.Setters>
                                        <Setter Property="BackgroundColor" Value="#3B82F6" />
                                    </VisualState.Setters>
                                </VisualState>
                                <VisualState x:Name="Pressed">
                                    <VisualState.Setters>
                                        <Setter Property="BackgroundColor" Value="#2563EB" />
                                    </VisualState.Setters>
                                </VisualState>
                            </VisualStateGroup>
                        </VisualStateGroupList>
                    </VisualStateManager.VisualStateGroups>
                </Button>

                <Button Text="Sửa"
        Command="{Binding EditCommand}"
        BackgroundColor="#3B82F6"
        TextColor="White"
        HeightRequest="48"
        FontAttributes="Bold"
        FontFamily="OpenSans-SemiBold">
                    <VisualStateManager.VisualStateGroups>
                        <VisualStateGroupList>
                            <VisualStateGroup x:Name="CommonStates">
                                <VisualState x:Name="Normal">
                                    <VisualState.Setters>
                                        <Setter Property="BackgroundColor" Value="#3B82F6" />
                                    </VisualState.Setters>
                                </VisualState>
                                <VisualState x:Name="Pressed">
                                    <VisualState.Setters>
                                        <Setter Property="BackgroundColor" Value="#2563EB" />
                                    </VisualState.Setters>
                                </VisualState>
                            </VisualStateGroup>
                        </VisualStateGroupList>
                    </VisualStateManager.VisualStateGroups>
                </Button>

                <Button Text="{Binding IsDeleteMode, Converter={StaticResource DeleteModeTextConverter}}"
        Command="{Binding ToggleDeleteModeCommand}"
        BackgroundColor="#EF4444"
        TextColor="White"
        HeightRequest="48"
        FontAttributes="Bold"
        FontFamily="OpenSans-SemiBold">
                    <VisualStateManager.VisualStateGroups>
                        <VisualStateGroupList>
                            <VisualStateGroup x:Name="CommonStates">
                                <VisualState x:Name="Normal">
                                    <VisualState.Setters>
                                        <Setter Property="BackgroundColor" Value="#3B82F6" />
                                    </VisualState.Setters>
                                </VisualState>
                                <VisualState x:Name="Pressed">
                                    <VisualState.Setters>
                                        <Setter Property="BackgroundColor" Value="#2563EB" />
                                    </VisualState.Setters>
                                </VisualState>
                            </VisualStateGroup>
                        </VisualStateGroupList>
                    </VisualStateManager.VisualStateGroups>
                </Button>

                <Button Text="Xoá các mục đã chọn"
        Command="{Binding DeleteCommand}"
        IsVisible="{Binding IsDeleteMode}"
        BackgroundColor="#EF4444"
        TextColor="White"
        HeightRequest="48"
        FontAttributes="Bold"
        FontFamily="OpenSans-SemiBold">
                    <VisualStateManager.VisualStateGroups>
                        <VisualStateGroupList>
                            <VisualStateGroup x:Name="CommonStates">
                                <VisualState x:Name="Normal">
                                    <VisualState.Setters>
                                        <Setter Property="BackgroundColor" Value="#EF4444" />
                                    </VisualState.Setters>
                                </VisualState>
                                <VisualState x:Name="Pressed">
                                    <VisualState.Setters>
                                        <Setter Property="BackgroundColor" Value="#DC2626" />
                                    </VisualState.Setters>
                                </VisualState>
                            </VisualStateGroup>
                        </VisualStateGroupList>
                    </VisualStateManager.VisualStateGroups>
                </Button>
            </HorizontalStackLayout>

            <!-- Tiêu đề cột -->
            <Frame HasShadow="True"
                   BackgroundColor="{DynamicResource CardBackgroundColor}"
                   Padding="20">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="2*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <Label Text="ID" Grid.Column="0" 
                           FontAttributes="Bold" 
                           FontFamily="OpenSans-SemiBold"
                           TextColor="{DynamicResource TextColor}"
                           HorizontalTextAlignment="Center"
                           FontSize="14"/>
                    <Label Text="Tên Loại Tiền Công" Grid.Column="1" 
                           FontAttributes="Bold" 
                           FontFamily="OpenSans-SemiBold"
                           TextColor="{DynamicResource TextColor}"
                           HorizontalTextAlignment="Center"
                           FontSize="14"/>
                    <Label Text="Đơn Giá" Grid.Column="2" 
                           FontAttributes="Bold" 
                           FontFamily="OpenSans-SemiBold"
                           TextColor="{DynamicResource TextColor}"
                           HorizontalTextAlignment="Center"
                           FontSize="14"/>
                    <Label Text="Hành động" Grid.Column="3" 
                           FontAttributes="Bold" 
                           FontFamily="OpenSans-SemiBold"
                           TextColor="{DynamicResource TextColor}"
                           HorizontalTextAlignment="Center"
                           FontSize="14"/>
                </Grid>
            </Frame>

            <!-- Danh sách loại tiền công -->
            <CollectionView ItemsSource="{Binding ListTienCong}">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame HasShadow="True"
       BackgroundColor="{DynamicResource CardBackgroundColor}"
       Padding="20"
       Margin="0,12,0,0">
                            <Grid ColumnSpacing="10">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <!-- ID + CheckBox -->
                                    <ColumnDefinition Width="2*" />
                                    <!-- Tên loại tiền công -->
                                    <ColumnDefinition Width="2*" />
                                    <!-- Đơn giá -->
                                    <ColumnDefinition Width="Auto" />
                                    <!-- Nút Chi tiết -->
                                </Grid.ColumnDefinitions>

                                <!-- Cột ID + CheckBox -->
                                <StackLayout Orientation="Horizontal" Grid.Column="0" VerticalOptions="Center">
                                    <CheckBox IsChecked="{Binding IsSelected}"
                      IsVisible="{Binding Path=BindingContext.IsDeleteMode, Source={x:Reference RootContentView}}" />
                                    <Label Text="{Binding Id}"
                   FontFamily="OpenSans-Regular"
                   TextColor="{DynamicResource TextColor}"
                   FontSize="13"
                   Margin="5,0,0,0"
                   VerticalOptions="Center"/>
                                </StackLayout>

                                <!-- Cột Tên Loại Tiền Công -->
                                <Label Text="{Binding TenLoaiTienCong}" 
               Grid.Column="1"
               FontFamily="OpenSans-Regular"
               TextColor="{DynamicResource TextColor}"
               FontSize="13"
               VerticalOptions="Center"/>

                                <!-- Cột Đơn Giá -->
                                <Label Text="{Binding DonGiaLoaiTienCong, StringFormat='{0:N0} đ'}"
               Grid.Column="2"
               FontFamily="OpenSans-Regular"
               TextColor="{DynamicResource TextColor}"
               FontSize="13"
               VerticalOptions="Center"
               HorizontalTextAlignment="End"/>

                                <!-- Cột Hành Động -->
                                <Button Text="Chi tiết"
                Command="{Binding Source={RelativeSource AncestorType={x:Type ContentView}}, Path=BindingContext.GoToChiTietTienCongPageCommand}"
                CommandParameter="{Binding Id}"
                Grid.Column="3"
                BackgroundColor="#3B82F6"
                TextColor="White"
                HeightRequest="40"
                FontFamily="OpenSans-SemiBold">
                                    <VisualStateManager.VisualStateGroups>
                                        <VisualStateGroupList>
                                            <VisualStateGroup x:Name="CommonStates">
                                                <VisualState x:Name="Normal">
                                                    <VisualState.Setters>
                                                        <Setter Property="BackgroundColor" Value="#3B82F6" />
                                                    </VisualState.Setters>
                                                </VisualState>
                                                <VisualState x:Name="Pressed">
                                                    <VisualState.Setters>
                                                        <Setter Property="BackgroundColor" Value="#2563EB" />
                                                    </VisualState.Setters>
                                                </VisualState>
                                            </VisualStateGroup>
                                        </VisualStateGroupList>
                                    </VisualStateManager.VisualStateGroups>
                                </Button>
                            </Grid>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <!-- Nút quay lại -->
            <Button Text="QUAY LẠI"
                    Command="{Binding GoBackCommand}"
                    BackgroundColor="#10B981"
                    TextColor="White"
                    HeightRequest="48"
                    FontAttributes="Bold"
                    FontFamily="OpenSans-SemiBold"
                    HorizontalOptions="Center"
                    Margin="0,20,0,0">
                <VisualStateManager.VisualStateGroups>
                    <VisualStateGroupList>
                        <VisualStateGroup x:Name="CommonStates">
                            <VisualState x:Name="Normal">
                                <VisualState.Setters>
                                    <Setter Property="BackgroundColor" Value="#10B981" />
                                </VisualState.Setters>
                            </VisualState>
                            <VisualState x:Name="Pressed">
                                <VisualState.Setters>
                                    <Setter Property="BackgroundColor" Value="#059669" />
                                </VisualState.Setters>
                            </VisualState>
                        </VisualStateGroup>
                    </VisualStateGroupList>
                </VisualStateManager.VisualStateGroups>
            </Button>
        </VerticalStackLayout>
    </ScrollView>
</ContentView>
