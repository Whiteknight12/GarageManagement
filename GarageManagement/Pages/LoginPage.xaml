<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GarageManagement.Pages.LoginPage"
             BackgroundColor="{DynamicResource BackgroundColor}"
             Title="ĐĂNG NHẬP">

    <ContentPage.Resources>
        <ResourceDictionary>
            <OnPlatform x:Key="CornerRadiusHandler" x:TypeArguments="x:Double">
                <On Platform="Android" Value="20" />
                <On Platform="iOS" Value="20" />
                <On Platform="Windows" Value="20" />
            </OnPlatform>
            <OnPlatform x:Key="ButtonCornerRadiusHandler" x:TypeArguments="x:Double">
                <On Platform="Android" Value="12" />
                <On Platform="iOS" Value="12" />
                <On Platform="Windows" Value="12" />
            </OnPlatform>
        </ResourceDictionary>
    </ContentPage.Resources>

    <ScrollView>
        <VerticalStackLayout Padding="30" Spacing="25" MaximumWidthRequest="1000">

            <Frame HasShadow="True"
                   BackgroundColor="{DynamicResource CardBackgroundColor}"
                   Padding="20"
                   >
                <VerticalStackLayout Spacing="15" HorizontalOptions="Center">
                    <Image Source="app_logo.png" HeightRequest="80" WidthRequest="80" />
                    <Label Text="MYGARA"
                           FontSize="20"
                           FontAttributes="Bold"
                           FontFamily="OpenSans-SemiBold"
                           TextColor="{DynamicResource TextColor}"
                           HorizontalOptions="Center"/>
                </VerticalStackLayout>
            </Frame>

            <Frame HasShadow="True"
                   BackgroundColor="{DynamicResource CardBackgroundColor}"
                   Padding="25"
                   
                   VerticalOptions="Center">
                <VerticalStackLayout Spacing="20">
                    <Label Text="ĐĂNG NHẬP"
                           FontSize="20"
                           FontAttributes="Bold"
                           FontFamily="OpenSans-SemiBold"
                           TextColor="{DynamicResource TextColor}"
                           HorizontalOptions="Center"
                           Margin="0,0,0,10"/>

                    <VerticalStackLayout Spacing="8">
                        <Label Text="Tên đăng nhập"
                               FontSize="16"
                               FontAttributes="Bold"
                               FontFamily="OpenSans-Regular"
                               TextColor="{DynamicResource TextColor}"/>
                        <Frame Padding="0"
                               
                               HasShadow="False"
                               BackgroundColor="#F3F4F6"
                               HeightRequest="48">
                            <Grid ColumnDefinitions="Auto,*" Padding="15,0">
                                <Image Grid.Column="0"
                                       Source="user.png"
                                       HeightRequest="20"
                                       WidthRequest="20"
                                       VerticalOptions="Center"/>
                                <Entry Grid.Column="1"
                                       x:Name="UsernameEntry"
                                       Placeholder="Nhập tên đăng nhập"
                                       Text="{Binding Username}"
                                       TextColor="Black"
                                       PlaceholderColor="{DynamicResource PlaceholderColor}"
                                       BackgroundColor="Transparent"
                                       FontSize="16"
                                       FontFamily="OpenSans-Regular"
                                       VerticalOptions="Center"/>
                            </Grid>
                        </Frame>
                    </VerticalStackLayout>

                    <VerticalStackLayout Spacing="8">
                        <Label Text="Mật khẩu"
                               FontSize="16"
                               FontAttributes="Bold"
                               FontFamily="OpenSans-Regular"
                               TextColor="{DynamicResource TextColor}"/>
                        <Frame Padding="0"
                               
                               HasShadow="False"
                               BackgroundColor="#F3F4F6"
                               HeightRequest="48">
                            <Grid ColumnDefinitions="Auto,*,Auto" Padding="15,0">
                                <Image Grid.Column="0"
                                       Source="passlock.png"
                                       HeightRequest="20"
                                       WidthRequest="20"
                                       VerticalOptions="Center"/>
                                <Entry Grid.Column="1"
                                       x:Name="PasswordEntry"
                                       Placeholder="Nhập mật khẩu"
                                       Text="{Binding Password}"
                                       IsPassword="True"
                                       TextColor="Black"
                                       PlaceholderColor="{DynamicResource PlaceholderColor}"
                                       BackgroundColor="Transparent"
                                       FontSize="16"
                                       FontFamily="OpenSans-Regular"
                                       VerticalOptions="Center"
                                       />
                                <ImageButton Grid.Column="2"
                                             Source="hide.png"
                                             Scale="0.5"
                                             HeightRequest="20"
                                             WidthRequest="20"
                                             BackgroundColor="Transparent"
                                             Clicked="OnTogglePasswordVisibilityClicked"/>
                            </Grid>
                        </Frame>
                    </VerticalStackLayout>

                    <Grid ColumnDefinitions="*,*" Margin="0,5">
                        <HorizontalStackLayout Grid.Column="0" Spacing="5">
                            <CheckBox Color="#10B981" VerticalOptions="Center" IsChecked="{Binding IsRememberMe}"/>
                            <Label Text="Nhớ mật khẩu"
                                   FontSize="14"
                                   FontFamily="OpenSans-Regular"
                                   TextColor="{DynamicResource TextColor}"
                                   VerticalOptions="Center"/>
                        </HorizontalStackLayout>
                        <Label Grid.Column="1"
                               Text="Quên mật khẩu?"
                               FontSize="14"
                               FontAttributes="Bold"
                               FontFamily="OpenSans-Regular"
                               TextColor="#3B82F6"
                               HorizontalOptions="End"
                               VerticalOptions="Center">
                            <Label.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding ForgotPasswordCommand}"/>
                            </Label.GestureRecognizers>
                        </Label>
                    </Grid>

                    <Button Text="ĐĂNG NHẬP"
                            FontSize="16"
                            FontAttributes="Bold"
                            FontFamily="OpenSans-SemiBold"
                            
                            BackgroundColor="#10B981"
                            TextColor="White"
                            HeightRequest="48"
                            Margin="0,10"
                            Command="{Binding LoginCommand}">
                        <VisualStateManager.VisualStateGroups>
                            <VisualStateGroupList>
                                <VisualStateGroup x:Name="CommonStates">
                                    <VisualState x:Name="Normal">
                                        <VisualState.Setters>
                                            <Setter Property="BackgroundColor" Value="#10B981"/>
                                        </VisualState.Setters>
                                    </VisualState>
                                    <VisualState x:Name="Pressed">
                                        <VisualState.Setters>
                                            <Setter Property="BackgroundColor" Value="#059669"/>
                                        </VisualState.Setters>
                                    </VisualState>
                                </VisualStateGroup>
                            </VisualStateGroupList>
                        </VisualStateManager.VisualStateGroups>
                    </Button>
                </VerticalStackLayout>
            </Frame>
            
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>