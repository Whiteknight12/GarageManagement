<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GarageManagement.Pages.QuanLiDanhSachHieuXePage"
             xmlns:service="clr-namespace:GarageManagement.Services"
             Title="Quản Lý Danh Sách Hiệu Xe">
    <ContentPage.Resources>
        <ResourceDictionary>
            <service:DeleteModeTextConverter x:Key="DeleteModeTextConverter" />
            <Style x:Key="HeaderLabelStyle" TargetType="Label">
                <Setter Property="FontAttributes" Value="Bold" />
                <Setter Property="TextColor" Value="#FFFFFF" />
                <Setter Property="HorizontalTextAlignment" Value="Center" />
                <Setter Property="FontSize" Value="14" />
            </Style>
            <Style x:Key="DataLabelStyle" TargetType="Label">
                <Setter Property="HorizontalTextAlignment" Value="Center" />
                <Setter Property="FontSize" Value="13" />
                <Setter Property="Margin" Value="5" />
            </Style>
            <Style x:Key="ButtonStyle" TargetType="Button">
                <Setter Property="BackgroundColor" Value="#2196F3" />
                <Setter Property="TextColor" Value="White" />
                <Setter Property="CornerRadius" Value="8" />
                <Setter Property="Padding" Value="10,5" />
                <Setter Property="FontSize" Value="13" />
            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>

    <ScrollView>
        <StackLayout Padding="10">
            <!-- Hàng chứa nút Thêm, Sửa, Xóa -->
            <HorizontalStackLayout HorizontalOptions="FillAndExpand" Margin="0,0,0,10">
                <Button Text="Thêm"
                        Command="{Binding AddCommand}"
                        Style="{StaticResource ButtonStyle}"
                        HorizontalOptions="Start" />
                <Button Text="Sửa"
                        Command="{Binding EditCommand}"
                        Style="{StaticResource ButtonStyle}"
                        HorizontalOptions="Center" />
                <Button Text="Xoá"
                        Command="{Binding DeleteCommand}"
                        Style="{StaticResource ButtonStyle}"
                        IsVisible="{Binding IsDeleteMode}"
                        HorizontalOptions="End" />
                <Button Text="{Binding IsDeleteMode, Converter={StaticResource DeleteModeTextConverter}}"
                        Command="{Binding ToggleDeleteModeCommand}"
                        Style="{StaticResource ButtonStyle}"
                        HorizontalOptions="End" />
            </HorizontalStackLayout>

            <!-- Tiêu đề các cột -->
            <Grid BackgroundColor="#1976D2" Padding="5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="2*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <Label Text="ID" Grid.Column="0" Style="{StaticResource HeaderLabelStyle}" />
                <Label Text="Tên Hiệu Xe" Grid.Column="1" Style="{StaticResource HeaderLabelStyle}" />
                <Label Text="Hành động" Grid.Column="2" Style="{StaticResource HeaderLabelStyle}" />
            </Grid>

            <!-- Dữ liệu -->
            <CollectionView ItemsSource="{Binding ListHieuXe}">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Grid BackgroundColor="#F5F5F5" Margin="0,2" Padding="5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="2*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <StackLayout Orientation="Horizontal" Grid.Column="0">
                                <CheckBox IsChecked="{Binding IsSelected}" 
                                          IsVisible="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.IsDeleteMode}" />
                                <Label Text="{Binding Id}" Style="{StaticResource DataLabelStyle}" />
                            </StackLayout>

                            <Label Text="{Binding TenHieuXe}" Grid.Column="1" Style="{StaticResource DataLabelStyle}" />

                            <Button Text="Chi tiết"
                                    Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.GoToChiTietHieuXePageCommand}"
                                    CommandParameter="{Binding Id}"
                                    Grid.Column="2"
                                    Style="{StaticResource ButtonStyle}" />
                        </Grid>
                    </DataTemplate>
                </CollectionView.ItemTemplate>  
            </CollectionView>

            <!-- Nút quay lại -->
            <Button Text="QUAY LẠI"
                    Command="{Binding GoBackCommand}"
                    Style="{StaticResource ButtonStyle}"
                    HorizontalOptions="Center"
                    Margin="0,20,0,0" />
        </StackLayout>
    </ScrollView>
</ContentPage>
