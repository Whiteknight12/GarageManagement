<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GarageManagement.Pages.QuanLiKhachHangPage"
             x:Name="RootContentView"
             xmlns:service="clr-namespace:GarageManagement.Services"
             BackgroundColor="{DynamicResource BackgroundColor}">

    <ContentView.Resources>
        <ResourceDictionary>
            <service:DeleteModeTextConverter x:Key="DeleteModeTextConverter" />
        </ResourceDictionary>
    </ContentView.Resources>

    <ScrollView>
        <VerticalStackLayout Padding="30" Spacing="20" MaximumWidthRequest="1000">

            <!-- Tiêu đề -->
            <Frame HasShadow="True"
                   BackgroundColor="{DynamicResource CardBackgroundColor}"
                   Padding="20">
                <VerticalStackLayout Spacing="12">
                    <Label Text="Quản Lý Khách Hàng"
                           FontSize="18"
                           FontAttributes="Bold"
                           FontFamily="OpenSans-SemiBold"
                           TextColor="{DynamicResource TextColor}"
                           HorizontalOptions="Start"/>
                </VerticalStackLayout>
            </Frame>

            <Frame HasShadow="True"
       Padding="20"
       BackgroundColor="{DynamicResource CardBackgroundColor}">
                <HorizontalStackLayout Spacing="14">

                    <HorizontalStackLayout Spacing="12">
                        <Label Text="CCCD:"
                   WidthRequest="80"
                   VerticalOptions="Center"
                   TextColor="{DynamicResource TextColor}"/>
                        <Entry Placeholder="Tìm theo CCCD"
                   Text="{Binding CccdFilter, Mode=TwoWay}"
                   FontFamily="OpenSans-Regular"
                   BackgroundColor="White"
                   />
                    </HorizontalStackLayout>

                    <HorizontalStackLayout Spacing="12">
                        <Label Text="Họ tên:"
                   WidthRequest="80"
                   VerticalOptions="Center"
                   TextColor="{DynamicResource TextColor}"/>
                        <Entry Placeholder="Tìm theo tên"
                   Text="{Binding NameFilter, Mode=TwoWay}"
                   FontFamily="OpenSans-Regular"
                   BackgroundColor="White"
                   />
                    </HorizontalStackLayout>

                    <HorizontalStackLayout Spacing="12">
                        <Label Text="SĐT:"
                   WidthRequest="80"
                   VerticalOptions="Center"
                   TextColor="{DynamicResource TextColor}"/>
                        <Entry Placeholder="Tìm theo SĐT"
                   Text="{Binding PhoneFilter, Mode=TwoWay}"
                   FontFamily="OpenSans-Regular"
                   BackgroundColor="White"
                   />
                    </HorizontalStackLayout>

                    <HorizontalStackLayout Spacing="12">
                        <Label Text="Email:"
                   WidthRequest="80"
                   VerticalOptions="Center"
                   TextColor="{DynamicResource TextColor}"/>
                        <Entry Placeholder="Tìm theo Email"
                   Text="{Binding EmailFilter, Mode=TwoWay}"
                   FontFamily="OpenSans-Regular"
                   BackgroundColor="White"
                   />
                    </HorizontalStackLayout>

                </HorizontalStackLayout>
            </Frame>
            
            <!-- Nút chức năng -->
            <HorizontalStackLayout Spacing="12" HorizontalOptions="Start">
                <!-- Thêm -->
                <Button Text="Thêm"
                        Command="{Binding AddCommand}"
                        BackgroundColor="#3B82F6"
                        TextColor="White"
                        HeightRequest="48"
                        FontAttributes="Bold"
                        FontFamily="OpenSans-SemiBold">
                    <VisualStateManager.VisualStateGroups>
                        <VisualStateGroupList>
                            <VisualStateGroup x:Name="CommonStates">
                                <VisualState x:Name="Normal">
                                    <VisualState.Setters>
                                        <Setter Property="BackgroundColor" Value="#3B82F6"/>
                                    </VisualState.Setters>
                                </VisualState>
                                <VisualState x:Name="Pressed">
                                    <VisualState.Setters>
                                        <Setter Property="BackgroundColor" Value="#2563EB"/>
                                    </VisualState.Setters>
                                </VisualState>
                            </VisualStateGroup>
                        </VisualStateGroupList>
                    </VisualStateManager.VisualStateGroups>
                </Button>

                <!-- Bật / tắt chế độ xoá -->
                <Button Text="{Binding IsDeleteMode, Converter={StaticResource DeleteModeTextConverter}}"
                        Command="{Binding ToggleDeleteModeCommand}"
                        BackgroundColor="#3B82F6"
                        TextColor="White"
                        HeightRequest="48"
                        FontAttributes="Bold"
                        FontFamily="OpenSans-SemiBold">
                    <VisualStateManager.VisualStateGroups>
                        <VisualStateGroupList>
                            <VisualStateGroup x:Name="CommonStates">
                                <VisualState x:Name="Normal">
                                    <VisualState.Setters>
                                        <Setter Property="BackgroundColor" Value="#3B82F6"/>
                                    </VisualState.Setters>
                                </VisualState>
                                <VisualState x:Name="Pressed">
                                    <VisualState.Setters>
                                        <Setter Property="BackgroundColor" Value="#2563EB"/>
                                    </VisualState.Setters>
                                </VisualState>
                            </VisualStateGroup>
                        </VisualStateGroupList>
                    </VisualStateManager.VisualStateGroups>
                </Button>

                <!-- Xoá mục đã chọn -->
                <Button Text="Xoá các mục đã chọn"
                        Command="{Binding DeleteCommand}"
                        IsVisible="{Binding IsDeleteMode}"
                        BackgroundColor="#EF4444"
                        TextColor="White"
                        HeightRequest="48"
                        FontAttributes="Bold"
                        FontFamily="OpenSans-SemiBold">
                    <VisualStateManager.VisualStateGroups>
                        <VisualStateGroupList>
                            <VisualStateGroup x:Name="CommonStates">
                                <VisualState x:Name="Normal">
                                    <VisualState.Setters>
                                        <Setter Property="BackgroundColor" Value="#EF4444"/>
                                    </VisualState.Setters>
                                </VisualState>
                                <VisualState x:Name="Pressed">
                                    <VisualState.Setters>
                                        <Setter Property="BackgroundColor" Value="#DC2626"/>
                                    </VisualState.Setters>
                                </VisualState>
                            </VisualStateGroup>
                        </VisualStateGroupList>
                    </VisualStateManager.VisualStateGroups>
                </Button>
            </HorizontalStackLayout>

            <!-- Header bảng (đã bỏ cột Hành động) -->
            <Frame HasShadow="True"
                   BackgroundColor="{DynamicResource CardBackgroundColor}"
                   Padding="20">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="0.7*"/>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="0.5*"/>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1*"/>
                    </Grid.ColumnDefinitions>

                    <Label Text="" Grid.Column="0"  FontAttributes="Bold" FontFamily="OpenSans-SemiBold"
                           TextColor="{DynamicResource TextColor}" HorizontalTextAlignment="Center" FontSize="14"/>
                    <Label Text="STT" Grid.Column="1" FontAttributes="Bold" FontFamily="OpenSans-SemiBold"
                           TextColor="{DynamicResource TextColor}" HorizontalTextAlignment="Center" FontSize="14"/>
                    <Label Text="CCCD" Grid.Column="2" FontAttributes="Bold" FontFamily="OpenSans-SemiBold"
                           TextColor="{DynamicResource TextColor}" HorizontalTextAlignment="Center" FontSize="14"/>
                    <Label Text="Họ và Tên" Grid.Column="3" FontAttributes="Bold" FontFamily="OpenSans-SemiBold"
                           TextColor="{DynamicResource TextColor}" HorizontalTextAlignment="Center" FontSize="14"/>
                    <Label Text="Tuổi" Grid.Column="4" FontAttributes="Bold" FontFamily="OpenSans-SemiBold"
                           TextColor="{DynamicResource TextColor}" HorizontalTextAlignment="Center" FontSize="14"/>
                    <Label Text="Giới Tính" Grid.Column="5" FontAttributes="Bold" FontFamily="OpenSans-SemiBold"
                           TextColor="{DynamicResource TextColor}" HorizontalTextAlignment="Center" FontSize="14"/>
                    <Label Text="Địa Chỉ" Grid.Column="6" FontAttributes="Bold" FontFamily="OpenSans-SemiBold"
                           TextColor="{DynamicResource TextColor}" HorizontalTextAlignment="Center" FontSize="14"/>
                    <Label Text="Số Điện Thoại" Grid.Column="7" FontAttributes="Bold" FontFamily="OpenSans-SemiBold"
                           TextColor="{DynamicResource TextColor}" HorizontalTextAlignment="Center" FontSize="14"/>
                    <Label Text="Tiền Nợ" Grid.Column="8" FontAttributes="Bold" FontFamily="OpenSans-SemiBold"
                           TextColor="{DynamicResource TextColor}" HorizontalTextAlignment="Center" FontSize="14"/>
                    <Label Text="Email" Grid.Column="9" FontAttributes="Bold" FontFamily="OpenSans-SemiBold"
                           TextColor="{DynamicResource TextColor}" HorizontalTextAlignment="Center" FontSize="14"/>
                </Grid>
            </Frame>

            <!-- Danh sách -->
            <CollectionView ItemsSource="{Binding ListKhachHang}">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame HasShadow="True"
                               BackgroundColor="{DynamicResource CardBackgroundColor}"
                               Padding="20"
                               Margin="0,12,0,0">

                            <!-- Double-tap để xem chi tiết -->
                            <Frame.GestureRecognizers>
                                <TapGestureRecognizer NumberOfTapsRequired="1"
                                                      Command="{Binding BindingContext.GoToChiTietKhachHangPageCommand,
                                                                Source={x:Reference RootContentView}}"
                                                      CommandParameter="{Binding Id}"/>
                            </Frame.GestureRecognizers>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="0.7*"/>
                                    <ColumnDefinition Width="1*"/>
                                    <ColumnDefinition Width="1*"/>
                                    <ColumnDefinition Width="0.5*"/>
                                    <ColumnDefinition Width="1*"/>
                                    <ColumnDefinition Width="1*"/>
                                    <ColumnDefinition Width="1*"/>
                                    <ColumnDefinition Width="1*"/>
                                    <ColumnDefinition Width="1*"/>
                                </Grid.ColumnDefinitions>

                                <CheckBox IsChecked="{Binding IsSelected}"
                                          Margin="10,0,0,0"
                                          IsVisible="{Binding Path=BindingContext.IsDeleteMode, Source={x:Reference RootContentView}}"
                                          Grid.Column="0"/>

                                <Label Text="{Binding STT}" Grid.Column="1" FontFamily="OpenSans-Regular"
                                       TextColor="{DynamicResource TextColor}" FontSize="13"
                                       VerticalOptions="Center" HorizontalTextAlignment="Center" Margin="30,0,0,0"/>

                                <Label Text="{Binding CCCD}" Grid.Column="2" FontFamily="OpenSans-Regular"
                                       TextColor="{DynamicResource TextColor}" FontSize="13"
                                       VerticalOptions="Center" HorizontalTextAlignment="Center" Margin="5"/>

                                <Label Text="{Binding HoVaTen}" Grid.Column="3" FontFamily="OpenSans-Regular"
                                       TextColor="{DynamicResource TextColor}" FontSize="13"
                                       VerticalOptions="Center" HorizontalTextAlignment="Center" Margin="5"/>

                                <Label Text="{Binding Tuoi}" Grid.Column="4" FontFamily="OpenSans-Regular"
                                       TextColor="{DynamicResource TextColor}" FontSize="13"
                                       VerticalOptions="Center" HorizontalTextAlignment="Center" Margin="5"/>

                                <Label Text="{Binding GioiTinh}" Grid.Column="5" FontFamily="OpenSans-Regular"
                                       TextColor="{DynamicResource TextColor}" FontSize="13"
                                       VerticalOptions="Center" HorizontalTextAlignment="Center" Margin="5"/>

                                <Label Text="{Binding DiaChi}" Grid.Column="6" FontFamily="OpenSans-Regular"
                                       TextColor="{DynamicResource TextColor}" FontSize="13"
                                       VerticalOptions="Center" HorizontalTextAlignment="Center" Margin="5"/>

                                <Label Text="{Binding SoDienThoai}" Grid.Column="7" FontFamily="OpenSans-Regular"
                                       TextColor="{DynamicResource TextColor}" FontSize="13"
                                       VerticalOptions="Center" HorizontalTextAlignment="Center" Margin="5"/>

                                <Label Text="{Binding TienNo}" Grid.Column="8" FontFamily="OpenSans-Regular"
                                       TextColor="{DynamicResource TextColor}" FontSize="13"
                                       VerticalOptions="Center" HorizontalTextAlignment="Center" Margin="5"/>

                                <Label Text="{Binding Email}" Grid.Column="9" FontFamily="OpenSans-Regular"
                                       TextColor="{DynamicResource TextColor}" FontSize="13"
                                       VerticalOptions="Center" HorizontalTextAlignment="Center" Margin="5"/>
                            </Grid>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
                <CollectionView.ItemsLayout>
                    <LinearItemsLayout ItemSpacing="10" Orientation="Vertical"/>
                </CollectionView.ItemsLayout>
            </CollectionView>
        </VerticalStackLayout>
    </ScrollView>
</ContentView>
