<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GarageManagement.Pages.QuanLiNhanVienPage"
             x:Name="RootContentView"
             xmlns:service="clr-namespace:GarageManagement.Services"
             BackgroundColor="{DynamicResource BackgroundColor}">

    <ContentView.Resources>
        <ResourceDictionary>
            <service:DeleteModeTextConverter x:Key="DeleteModeTextConverter" />
        </ResourceDictionary>
    </ContentView.Resources>

    <!-- 1 cột cho danh sách (giãn) + 1 cột Auto cho pane -->
    <Grid ColumnDefinitions="*,Auto">

        <!-- ====================== DANH SÁCH ====================== -->
        <ScrollView Grid.Column="0">
            <VerticalStackLayout Padding="30" Spacing="20" MaximumWidthRequest="1000">

                <!-- Tiêu đề -->
                <Frame HasShadow="True"
                       BackgroundColor="{DynamicResource CardBackgroundColor}"
                       Padding="20">
                    <VerticalStackLayout Spacing="12">
                        <Label Text="Quản Lý Nhân Viên"
                               FontSize="18"
                               FontAttributes="Bold"
                               FontFamily="OpenSans-SemiBold"
                               TextColor="{DynamicResource TextColor}"
                               HorizontalOptions="Start"/>
                    </VerticalStackLayout>
                </Frame>

                <!-- ───── FILTER giống khối chuẩn ───── -->
                <Frame HasShadow="True"
       Padding="20"
       BackgroundColor="{DynamicResource CardBackgroundColor}">
                    <HorizontalStackLayout Spacing="14">

                        <!-- CCCD -->
                        <HorizontalStackLayout Spacing="12">
                            <Label Text="CCCD:"
                   WidthRequest="80"
                   VerticalOptions="Center"
                   TextColor="{DynamicResource TextColor}" />
                            <Entry Placeholder="Lọc CCCD"
                   Text="{Binding CccdFilter, Mode=TwoWay}"
                   FontFamily="OpenSans-Regular"
                   BackgroundColor="White"
                   HeightRequest="42"
                   WidthRequest="200" />
                        </HorizontalStackLayout>

                        <!-- Họ tên -->
                        <HorizontalStackLayout Spacing="12">
                            <Label Text="Họ tên:"
                   WidthRequest="80"
                   VerticalOptions="Center"
                   TextColor="{DynamicResource TextColor}" />
                            <Entry Placeholder="Lọc Họ tên"
                   Text="{Binding NameFilter, Mode=TwoWay}"
                   FontFamily="OpenSans-Regular"
                   BackgroundColor="White"
                   HeightRequest="42"
                   WidthRequest="200" />
                        </HorizontalStackLayout>

                        <!-- SĐT -->
                        <HorizontalStackLayout Spacing="12">
                            <Label Text="SĐT:"
                   WidthRequest="80"
                   VerticalOptions="Center"
                   TextColor="{DynamicResource TextColor}" />
                            <Entry Placeholder="Lọc SĐT"
                   Text="{Binding PhoneFilter, Mode=TwoWay}"
                   FontFamily="OpenSans-Regular"
                   BackgroundColor="White"
                   HeightRequest="42"
                   WidthRequest="170" />
                        </HorizontalStackLayout>

                    </HorizontalStackLayout>
                </Frame>
                <!-- ───── END FILTER ───── -->


                <!-- Nút chức năng -->
                <HorizontalStackLayout Spacing="12" HorizontalOptions="Start">
                    <!-- Thêm -->
                    <Button Text="Thêm"
                            Command="{Binding AddCommand}"
                            BackgroundColor="#3B82F6"
                            TextColor="White"
                            HeightRequest="48"
                            FontAttributes="Bold"
                            FontFamily="OpenSans-SemiBold">
                        <!-- states giữ nguyên -->
                        <VisualStateManager.VisualStateGroups>
                            <VisualStateGroupList>
                                <VisualStateGroup x:Name="CommonStates">
                                    <VisualState x:Name="Normal">
                                        <VisualState.Setters>
                                            <Setter Property="BackgroundColor" Value="#3B82F6"/>
                                        </VisualState.Setters>
                                    </VisualState>
                                    <VisualState x:Name="Pressed">
                                        <VisualState.Setters>
                                            <Setter Property="BackgroundColor" Value="#2563EB"/>
                                        </VisualState.Setters>
                                    </VisualState>
                                </VisualStateGroup>
                            </VisualStateGroupList>
                        </VisualStateManager.VisualStateGroups>
                    </Button>

                    <!-- Chế độ xoá -->
                    <Button Text="{Binding IsDeleteMode, Converter={StaticResource DeleteModeTextConverter}}"
                            Command="{Binding ToggleDeleteModeCommand}"
                            BackgroundColor="#3B82F6"
                            TextColor="White"
                            HeightRequest="48"
                            FontAttributes="Bold"
                            FontFamily="OpenSans-SemiBold">
                        <VisualStateManager.VisualStateGroups>
                            <VisualStateGroupList>
                                <VisualStateGroup x:Name="CommonStates">
                                    <VisualState x:Name="Normal">
                                        <VisualState.Setters>
                                            <Setter Property="BackgroundColor" Value="#3B82F6"/>
                                        </VisualState.Setters>
                                    </VisualState>
                                    <VisualState x:Name="Pressed">
                                        <VisualState.Setters>
                                            <Setter Property="BackgroundColor" Value="#2563EB"/>
                                        </VisualState.Setters>
                                    </VisualState>
                                </VisualStateGroup>
                            </VisualStateGroupList>
                        </VisualStateManager.VisualStateGroups>
                    </Button>

                    <!-- Xoá các mục -->
                    <Button Text="Xoá các mục đã chọn"
                            Command="{Binding DeleteCommand}"
                            IsVisible="{Binding IsDeleteMode}"
                            BackgroundColor="#EF4444"
                            TextColor="White"
                            HeightRequest="48"
                            FontAttributes="Bold"
                            FontFamily="OpenSans-SemiBold">
                        <VisualStateManager.VisualStateGroups>
                            <VisualStateGroupList>
                                <VisualStateGroup x:Name="CommonStates">
                                    <VisualState x:Name="Normal">
                                        <VisualState.Setters>
                                            <Setter Property="BackgroundColor" Value="#EF4444"/>
                                        </VisualState.Setters>
                                    </VisualState>
                                    <VisualState x:Name="Pressed">
                                        <VisualState.Setters>
                                            <Setter Property="BackgroundColor" Value="#DC2626"/>
                                        </VisualState.Setters>
                                    </VisualState>
                                </VisualStateGroup>
                            </VisualStateGroupList>
                        </VisualStateManager.VisualStateGroups>
                    </Button>
                </HorizontalStackLayout>

                <!-- Header bảng (KHÔNG còn cột hành động) -->
                <Frame HasShadow="True"
                       BackgroundColor="{DynamicResource CardBackgroundColor}"
                       Padding="20">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="0.7*"/>
                            <ColumnDefinition Width="1*"/>
                            <ColumnDefinition Width="1*"/>
                            <ColumnDefinition Width="0.5*"/>
                            <ColumnDefinition Width="1*"/>
                            <ColumnDefinition Width="1*"/>
                            <ColumnDefinition Width="1*"/>
                        </Grid.ColumnDefinitions>

                        <Label Text="" Grid.Column="0" FontAttributes="Bold" FontFamily="OpenSans-SemiBold"
                               TextColor="{DynamicResource TextColor}" HorizontalTextAlignment="Center" FontSize="14"/>
                        <Label Text="STT" Grid.Column="1" FontAttributes="Bold" FontFamily="OpenSans-SemiBold"
                               TextColor="{DynamicResource TextColor}" HorizontalTextAlignment="Center" FontSize="14"/>
                        <Label Text="CCCD" Grid.Column="2" FontAttributes="Bold" FontFamily="OpenSans-SemiBold"
                               TextColor="{DynamicResource TextColor}" HorizontalTextAlignment="Center" FontSize="14"/>
                        <Label Text="Họ Tên" Grid.Column="3" FontAttributes="Bold" FontFamily="OpenSans-SemiBold"
                               TextColor="{DynamicResource TextColor}" HorizontalTextAlignment="Center" FontSize="14"/>
                        <Label Text="Tuổi" Grid.Column="4" FontAttributes="Bold" FontFamily="OpenSans-SemiBold"
                               TextColor="{DynamicResource TextColor}" HorizontalTextAlignment="Center" FontSize="14"/>
                        <Label Text="Giới Tính" Grid.Column="5" FontAttributes="Bold" FontFamily="OpenSans-SemiBold"
                               TextColor="{DynamicResource TextColor}" HorizontalTextAlignment="Center" FontSize="14"/>
                        <Label Text="Địa Chỉ" Grid.Column="6" FontAttributes="Bold" FontFamily="OpenSans-SemiBold"
                               TextColor="{DynamicResource TextColor}" HorizontalTextAlignment="Center" FontSize="14"/>
                        <Label Text="SĐT" Grid.Column="7" FontAttributes="Bold" FontFamily="OpenSans-SemiBold"
                               TextColor="{DynamicResource TextColor}" HorizontalTextAlignment="Center" FontSize="14"/>
                    </Grid>
                </Frame>

                <!-- Danh sách -->
                <CollectionView ItemsSource="{Binding ListNhanVien}">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Frame HasShadow="True"
                                   BackgroundColor="{DynamicResource CardBackgroundColor}"
                                   Padding="20"
                                   Margin="0,12,0,0">

                                <Frame.GestureRecognizers>
                                    <TapGestureRecognizer
                                        Command="{Binding BindingContext.ViewDetailNhanVienCommand, Source={x:Reference RootContentView}}"
                                        CommandParameter="{Binding Id}"/>
                                </Frame.GestureRecognizers>

                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="0.7*"/>
                                        <ColumnDefinition Width="1*"/>
                                        <ColumnDefinition Width="1*"/>
                                        <ColumnDefinition Width="0.5*"/>
                                        <ColumnDefinition Width="1*"/>
                                        <ColumnDefinition Width="1*"/>
                                        <ColumnDefinition Width="1*"/>
                                    </Grid.ColumnDefinitions>

                                    <CheckBox IsChecked="{Binding IsSelected}"
                                              Margin="10,0,0,0"
                                              IsVisible="{Binding Path=BindingContext.IsDeleteMode, Source={x:Reference RootContentView}}"
                                              Grid.Column="0"/>

                                    <Label Text="{Binding STT}" Grid.Column="1" FontFamily="OpenSans-Regular"
                                           TextColor="{DynamicResource TextColor}" FontSize="13"
                                           HorizontalTextAlignment="Center" VerticalOptions="Center"/>

                                    <Label Text="{Binding CCCD}" Grid.Column="2" FontFamily="OpenSans-Regular"
                                           TextColor="{DynamicResource TextColor}" FontSize="13"
                                           HorizontalTextAlignment="Center" VerticalOptions="Center" Margin="5"/>

                                    <Label Text="{Binding HoTen}" Grid.Column="3" FontFamily="OpenSans-Regular"
                                           TextColor="{DynamicResource TextColor}" FontSize="13"
                                           HorizontalTextAlignment="Center" VerticalOptions="Center" Margin="5"/>

                                    <Label Text="{Binding Tuoi}" Grid.Column="4" FontFamily="OpenSans-Regular"
                                           TextColor="{DynamicResource TextColor}" FontSize="13"
                                           HorizontalTextAlignment="Center" VerticalOptions="Center" Margin="5"/>

                                    <Label Text="{Binding GioiTinh}" Grid.Column="5" FontFamily="OpenSans-Regular"
                                           TextColor="{DynamicResource TextColor}" FontSize="13"
                                           HorizontalTextAlignment="Center" VerticalOptions="Center" Margin="5"/>

                                    <Label Text="{Binding DiaChi}" Grid.Column="6" FontFamily="OpenSans-Regular"
                                           TextColor="{DynamicResource TextColor}" FontSize="13"
                                           HorizontalTextAlignment="Center" VerticalOptions="Center" Margin="5"/>

                                    <Label Text="{Binding SoDienThoai}" Grid.Column="7" FontFamily="OpenSans-Regular"
                                           TextColor="{DynamicResource TextColor}" FontSize="13"
                                           HorizontalTextAlignment="Center" VerticalOptions="Center" Margin="5"/>
                                </Grid>
                            </Frame>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                    <CollectionView.ItemsLayout>
                        <LinearItemsLayout ItemSpacing="10" Orientation="Vertical"/>
                    </CollectionView.ItemsLayout>
                </CollectionView>
            </VerticalStackLayout>
        </ScrollView>

        <!-- ====================== CHI TIẾT ====================== -->
        <Frame Grid.Column="1"
               WidthRequest="320"
               HasShadow="True"
               Padding="20"
               BackgroundColor="{DynamicResource CardBackgroundColor}"
               IsVisible="{Binding IsDetailPaneVisible}">
            <VerticalStackLayout Spacing="12">
                <HorizontalStackLayout>
                    <Label Text="Chi Tiết Nhân Viên"
                           FontSize="18"
                           FontAttributes="Bold"
                           FontFamily="OpenSans-SemiBold"
                           TextColor="{DynamicResource TextColor}"/>
                    <Button Text="✕"
                            Command="{Binding CloseDetailPaneCommand}"
                            HorizontalOptions="EndAndExpand"
                            BackgroundColor="Transparent"
                            TextColor="{DynamicResource TextColor}"
                            FontFamily="OpenSans-SemiBold"/>
                </HorizontalStackLayout>

                <!-- Các field giữ nguyên -->
                <Label FontAttributes="Bold" FontFamily="OpenSans-SemiBold"
                       TextColor="{DynamicResource TextColor}" Text="CCCD:"/>
                <Entry  Text="{Binding SelectedNhanVien.CCCD}" FontFamily="OpenSans-Regular"
                       TextColor="{DynamicResource TextColor}" IsEnabled="{Binding IsEditing}"
                        BackgroundColor="White"/>

                <Label FontAttributes="Bold" FontFamily="OpenSans-SemiBold"
                       TextColor="{DynamicResource TextColor}" Text="Họ Tên:"/>
                <Entry  Text="{Binding SelectedNhanVien.HoTen}" FontFamily="OpenSans-Regular"
                       TextColor="{DynamicResource TextColor}" BackgroundColor="White" IsEnabled="{Binding IsEditing}"/>

                <Label FontAttributes="Bold" FontFamily="OpenSans-SemiBold"
                       TextColor="{DynamicResource TextColor}" Text="Tuổi:"/>
                <Entry  Text="{Binding SelectedNhanVien.Tuoi}" FontFamily="OpenSans-Regular"
                       TextColor="{DynamicResource TextColor}" BackgroundColor="White" IsEnabled="{Binding IsEditing}"/>

                <Label FontAttributes="Bold" FontFamily="OpenSans-SemiBold"
                       TextColor="{DynamicResource TextColor}" Text="Giới Tính:"/>
                <Entry  Text="{Binding SelectedNhanVien.GioiTinh}" FontFamily="OpenSans-Regular"
                       TextColor="{DynamicResource TextColor}" BackgroundColor="White" IsEnabled="{Binding IsEditing}"/>

                <Label FontAttributes="Bold" FontFamily="OpenSans-SemiBold"
                       TextColor="{DynamicResource TextColor}" Text="Địa Chỉ:"/>
                <Entry  Text="{Binding SelectedNhanVien.DiaChi}" FontFamily="OpenSans-Regular"
                       TextColor="{DynamicResource TextColor}" BackgroundColor="White" IsEnabled="{Binding IsEditing}"/>

                <Label FontAttributes="Bold" FontFamily="OpenSans-SemiBold"
                       TextColor="{DynamicResource TextColor}" Text="SĐT:"/>
                <Entry  Text="{Binding SelectedNhanVien.SoDienThoai}" FontFamily="OpenSans-Regular"
                       TextColor="{DynamicResource TextColor}" BackgroundColor="White" IsEnabled="{Binding IsEditing}"/>

                <Label FontAttributes="Bold" FontFamily="OpenSans-SemiBold"
       TextColor="{DynamicResource TextColor}" Text="Email: "/>
                <Entry  Text="{Binding SelectedNhanVien.Email}" FontFamily="OpenSans-Regular"
       TextColor="{DynamicResource TextColor}" IsEnabled="{Binding IsEditing}" BackgroundColor="White" />

                <Label FontAttributes="Bold" FontFamily="OpenSans-SemiBold"
       TextColor="{DynamicResource TextColor}" Text="Tài khoản Id"/>
                <Entry  Text="{Binding SelectedNhanVien.TaiKhoanId}" FontFamily="OpenSans-Regular"
       TextColor="{DynamicResource TextColor}" IsEnabled="{Binding IsEditing}" BackgroundColor="White" />

                <Grid ColumnDefinitions="*,*">
                    <Button Grid.Column="0" Text="Sửa"
    Command="{Binding EditDetailCommand}"
    IsVisible="{Binding IsNotEditing, Converter={StaticResource FalseConverter}}"
    BackgroundColor="#3B82F6"
    TextColor="White"
    HeightRequest="40"
    FontFamily="OpenSans-SemiBold">
                        <VisualStateManager.VisualStateGroups>
                            <VisualStateGroupList>
                                <VisualStateGroup x:Name="CommonStates">
                                    <VisualState x:Name="Normal">
                                        <VisualState.Setters>
                                            <Setter Property="BackgroundColor" Value="#3B82F6"/>
                                        </VisualState.Setters>
                                    </VisualState>
                                    <VisualState x:Name="Pressed">
                                        <VisualState.Setters>
                                            <Setter Property="BackgroundColor" Value="#2563EB"/>
                                        </VisualState.Setters>
                                    </VisualState>
                                </VisualStateGroup>
                            </VisualStateGroupList>
                        </VisualStateManager.VisualStateGroups>
                    </Button>
                    <Button Grid.Column="1" Text="Lưu"
    Command="{Binding SaveDetailCommand}"
    IsVisible="{Binding IsEditing}"
    BackgroundColor="#10B981"
    TextColor="White"
    HeightRequest="40"
    FontFamily="OpenSans-SemiBold">
                        <VisualStateManager.VisualStateGroups>
                            <VisualStateGroupList>
                                <VisualStateGroup x:Name="CommonStates">
                                    <VisualState x:Name="Normal">
                                        <VisualState.Setters>
                                            <Setter Property="BackgroundColor" Value="#3B82F6"/>
                                        </VisualState.Setters>
                                    </VisualState>
                                    <VisualState x:Name="Pressed">
                                        <VisualState.Setters>
                                            <Setter Property="BackgroundColor" Value="#2563EB"/>
                                        </VisualState.Setters>
                                    </VisualState>
                                </VisualStateGroup>
                            </VisualStateGroupList>
                        </VisualStateManager.VisualStateGroups>
                    </Button>
                </Grid>
            </VerticalStackLayout>
        </Frame>
    </Grid>
</ContentView>
