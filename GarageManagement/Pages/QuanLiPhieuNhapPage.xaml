<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GarageManagement.Pages.QuanLiPhieuNhapPage"
             x:Name="RootContentView"
             xmlns:service="clr-namespace:GarageManagement.Services"
             BackgroundColor="{DynamicResource BackgroundColor}">

    <ContentView.Resources>
        <ResourceDictionary>
            <service:DeleteModeTextConverter x:Key="DeleteModeTextConverter" />
        </ResourceDictionary>
    </ContentView.Resources>

    <ScrollView>
        <VerticalStackLayout Padding="30" Spacing="20" MaximumWidthRequest="1000">

            <!-- Tiêu đề -->
            <Frame HasShadow="True"
                   BackgroundColor="{DynamicResource CardBackgroundColor}"
                   Padding="20">
                <VerticalStackLayout Spacing="12">
                    <Label Text="Quản Lý Phiếu Nhập" 
                           FontSize="18" 
                           FontAttributes="Bold" 
                           FontFamily="OpenSans-SemiBold"
                           TextColor="{DynamicResource TextColor}"
                           HorizontalOptions="Start"/>
                </VerticalStackLayout>
            </Frame>

            <!-- Các nút chức năng -->
            <HorizontalStackLayout Spacing="12" HorizontalOptions="Start">
                <Button Text="Thêm"
                        Command="{Binding AddCommand}"
                        BackgroundColor="#3B82F6"
                        TextColor="White"
                        HeightRequest="48"
                        FontAttributes="Bold"
                        FontFamily="OpenSans-SemiBold">
                    <VisualStateManager.VisualStateGroups>
                        <VisualStateGroupList>
                            <VisualStateGroup x:Name="CommonStates">
                                <VisualState x:Name="Normal">
                                    <VisualState.Setters>
                                        <Setter Property="BackgroundColor" Value="#3B82F6" />
                                    </VisualState.Setters>
                                </VisualState>
                                <VisualState x:Name="Pressed">
                                    <VisualState.Setters>
                                        <Setter Property="BackgroundColor" Value="#2563EB" />
                                    </VisualState.Setters>
                                </VisualState>
                            </VisualStateGroup>
                        </VisualStateGroupList>
                    </VisualStateManager.VisualStateGroups>
                </Button>

                <Button Text="{Binding IsDeleteMode, Converter={StaticResource DeleteModeTextConverter}}"
                        Command="{Binding ToggleDeleteModeCommand}"
                        BackgroundColor="#3B82F6"
                        TextColor="White"
                        HeightRequest="48"
                        FontAttributes="Bold"
                        FontFamily="OpenSans-SemiBold">
                    <VisualStateManager.VisualStateGroups>
                        <VisualStateGroupList>
                            <VisualStateGroup x:Name="CommonStates">
                                <VisualState x:Name="Normal">
                                    <VisualState.Setters>
                                        <Setter Property="BackgroundColor" Value="#3B82F6" />
                                    </VisualState.Setters>
                                </VisualState>
                                <VisualState x:Name="Pressed">
                                    <VisualState.Setters>
                                        <Setter Property="BackgroundColor" Value="#2563EB" />
                                    </VisualState.Setters>
                                </VisualState>
                            </VisualStateGroup>
                        </VisualStateGroupList>
                    </VisualStateManager.VisualStateGroups>
                </Button>

                <Button Text="Xoá các mục đã chọn"
                        Command="{Binding DeleteCommand}"
                        IsVisible="{Binding IsDeleteMode}"
                        BackgroundColor="#EF4444"
                        TextColor="White"
                        HeightRequest="48"
                        FontAttributes="Bold"
                        FontFamily="OpenSans-SemiBold">
                    <VisualStateManager.VisualStateGroups>
                        <VisualStateGroupList>
                            <VisualStateGroup x:Name="CommonStates">
                                <VisualState x:Name="Normal">
                                    <VisualState.Setters>
                                        <Setter Property="BackgroundColor" Value="#EF4444" />
                                    </VisualState.Setters>
                                </VisualState>
                                <VisualState x:Name="Pressed">
                                    <VisualState.Setters>
                                        <Setter Property="BackgroundColor" Value="#DC2626" />
                                    </VisualState.Setters>
                                </VisualState>
                            </VisualStateGroup>
                        </VisualStateGroupList>
                    </VisualStateManager.VisualStateGroups>
                </Button>
            </HorizontalStackLayout>

            <!-- Tiêu đề cột -->
            <Frame HasShadow="True"
                   BackgroundColor="{DynamicResource CardBackgroundColor}"
                   Padding="20">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <!-- Cột cho CheckBox -->
                        <ColumnDefinition Width="0.7*" />
                        <!-- Cột STT -->
                        <ColumnDefinition Width="1*" />
                        <!-- Cột Ngày Nhập -->
                        <ColumnDefinition Width="1*" />
                        <!-- Cột Tổng Tiền -->
                        <ColumnDefinition Width="0.5*" />
                        <!-- Cột Hành động -->
                    </Grid.ColumnDefinitions>
                    <Label Text="" Grid.Column="0" 
                           FontAttributes="Bold" 
                           FontFamily="OpenSans-SemiBold"
                           TextColor="{DynamicResource TextColor}"
                           HorizontalTextAlignment="Center"
                           FontSize="14"/>
                    <Label Text="STT" Grid.Column="1" 
                           FontAttributes="Bold" 
                           FontFamily="OpenSans-SemiBold"
                           TextColor="{DynamicResource TextColor}"
                           HorizontalTextAlignment="Center"
                           FontSize="14"/>
                    <Label Text="Ngày Nhập" Grid.Column="2" 
                           FontAttributes="Bold" 
                           FontFamily="OpenSans-SemiBold"
                           TextColor="{DynamicResource TextColor}"
                           HorizontalTextAlignment="Center"
                           FontSize="14"/>
                    <Label Text="Tổng Tiền" Grid.Column="3" 
                           FontAttributes="Bold" 
                           FontFamily="OpenSans-SemiBold"
                           TextColor="{DynamicResource TextColor}"
                           HorizontalTextAlignment="Center"
                           FontSize="14"/>
                    <Label Text="Hành động" Grid.Column="4" 
                           FontAttributes="Bold" 
                           FontFamily="OpenSans-SemiBold"
                           TextColor="{DynamicResource TextColor}"
                           HorizontalTextAlignment="Center"
                           FontSize="14"/>
                </Grid>
            </Frame>

            <!-- Danh sách phiếu sửa chữa -->
            <CollectionView ItemsSource="{Binding ListPhieuNhapVatTu}">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame HasShadow="True"
                               BackgroundColor="{DynamicResource CardBackgroundColor}"
                               Padding="20"
                               Margin="0,12,0,0">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <!-- Cột cho CheckBox -->
                                    <ColumnDefinition Width="0.7*" />
                                    <!-- Cột STT -->
                                    <ColumnDefinition Width="1*" />
                                    <!-- Cột Ngày Nhập -->
                                    <ColumnDefinition Width="1*" />
                                    <!-- Cột Tổng Tiền -->
                                    <ColumnDefinition Width="0.5*" />
                                    <!-- Cột Hành động -->
                                </Grid.ColumnDefinitions>
                                <CheckBox IsChecked="{Binding IsSelected}"
                                          Margin="10,0,0,0"
                                          IsVisible="{Binding Path=BindingContext.IsDeleteMode, Source={x:Reference RootContentView}}"
                                          Grid.Column="0" />
                                <Label Text="{Binding STT}" Grid.Column="1" 
                                       FontFamily="OpenSans-Regular"
                                       TextColor="{DynamicResource TextColor}"
                                       VerticalOptions="Center"
                                       HorizontalTextAlignment="Center"
                                       FontSize="13"/>
                                <Label Text="{Binding NgayNhap, StringFormat='{0:dd/MM/yyyy}'}" Grid.Column="2" 
                                       FontFamily="OpenSans-Regular"
                                       TextColor="{DynamicResource TextColor}"
                                       HorizontalTextAlignment="Center"
                                       VerticalOptions="Center"
                                       FontSize="13"
                                       Margin="5"/>
                                <Label Text="{Binding TongTien, StringFormat='{0:N0} VNĐ'}" Grid.Column="3" 
                                       FontFamily="OpenSans-Regular"
                                       TextColor="{DynamicResource TextColor}"
                                       HorizontalTextAlignment="Center"
                                       VerticalOptions="Center"
                                       FontSize="13"
                                       Margin="5"/>
                                <Button Text="Sửa"
                                        Command="{Binding Source={x:Reference RootContentView}, Path=BindingContext.EditCommand}"
                                        CommandParameter="{Binding Id}"
                                        Grid.Column="4"
                                        BackgroundColor="#3B82F6"
                                        TextColor="White"
                                        HeightRequest="40"
                                        FontFamily="OpenSans-SemiBold">
                                    <VisualStateManager.VisualStateGroups>
                                        <VisualStateGroupList>
                                            <VisualStateGroup x:Name="CommonStates">
                                                <VisualState x:Name="Normal">
                                                    <VisualState.Setters>
                                                        <Setter Property="BackgroundColor" Value="#3B82F6" />
                                                    </VisualState.Setters>
                                                </VisualState>
                                                <VisualState x:Name="Pressed">
                                                    <VisualState.Setters>
                                                        <Setter Property="BackgroundColor" Value="#2563EB" />
                                                    </VisualState.Setters>
                                                </VisualState>
                                            </VisualStateGroup>
                                        </VisualStateGroupList>
                                    </VisualStateManager.VisualStateGroups>
                                </Button>
                            </Grid>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
                <CollectionView.ItemsLayout>
                    <LinearItemsLayout ItemSpacing="10" Orientation="Vertical"/>
                </CollectionView.ItemsLayout>
            </CollectionView>
        </VerticalStackLayout>
    </ScrollView>
</ContentView>