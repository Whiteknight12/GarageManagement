<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GarageManagement.Pages.QuanLiPhieuThuTienPage"
             x:Name="RootContentView"
             xmlns:service="clr-namespace:GarageManagement.Services"
             BackgroundColor="{DynamicResource BackgroundColor}">

    <ContentView.Resources>
        <ResourceDictionary>
            <service:DeleteModeTextConverter x:Key="DeleteModeTextConverter" />
        </ResourceDictionary>
    </ContentView.Resources>

    <ScrollView>
        <VerticalStackLayout Padding="30" Spacing="20" MaximumWidthRequest="1000">

            <!-- Tiêu đề -->
            <Frame HasShadow="True"
                   BackgroundColor="{DynamicResource CardBackgroundColor}"
                   Padding="20">
                <VerticalStackLayout Spacing="12">
                    <Label Text="Quản Lý Phiếu Thu Tiền" 
                           FontSize="18" 
                           FontAttributes="Bold" 
                           FontFamily="OpenSans-SemiBold"
                           TextColor="{DynamicResource TextColor}"
                           HorizontalOptions="Start"/>
                </VerticalStackLayout>
            </Frame>

            <Frame Padding="20" BackgroundColor="{DynamicResource CardBackgroundColor}" HasShadow="True">
                <HorizontalStackLayout Spacing="16">

                    <!-- Tên khách -->
                    <HorizontalStackLayout Spacing="6">
                        <Label Text="Tên KH:"
                   WidthRequest="80" VerticalOptions="Center"
                   TextColor="{DynamicResource TextColor}"/>
                        <Entry Text="{Binding NameFilter}" Placeholder="Tên"
                   WidthRequest="150" HeightRequest="42"
                   FontFamily="OpenSans-Regular" BackgroundColor="White"/>
                    </HorizontalStackLayout>

                    <!-- CCCD -->
                    <HorizontalStackLayout Spacing="6">
                        <Label Text="CCCD:" WidthRequest="60" VerticalOptions="Center"
                   TextColor="{DynamicResource TextColor}"/>
                        <Entry Text="{Binding CccdFilter}" Placeholder="CCCD"
                   WidthRequest="140" HeightRequest="42"
                   FontFamily="OpenSans-Regular" BackgroundColor="White"/>
                    </HorizontalStackLayout>

                    <!-- Biển số -->
                    <HorizontalStackLayout Spacing="6">
                        <Label Text="Biển số:" WidthRequest="75" VerticalOptions="Center"
                   TextColor="{DynamicResource TextColor}"/>
                        <Entry Text="{Binding BienSoFilter}" Placeholder="Biển số"
                   WidthRequest="120" HeightRequest="42"
                   FontFamily="OpenSans-Regular" BackgroundColor="White"/>
                    </HorizontalStackLayout>

                    <!-- Ngày thu -->
                    <HorizontalStackLayout Spacing="6">
                        <Label Text="Ngày:" WidthRequest="45" VerticalOptions="Center"
                   TextColor="{DynamicResource TextColor}"/>
                        <DatePicker Date="{Binding SelectedDate}" Format="dd/MM/yyyy"
                        WidthRequest="150" HeightRequest="42"
                                    BackgroundColor="{DynamicResource BackgroundColor}"
                                    TextColor="{DynamicResource TextColor}"/>
                    </HorizontalStackLayout>

                    <!-- Giá -->
                    <HorizontalStackLayout Spacing="6">
                        <Label Text="Giá từ:" WidthRequest="60" VerticalOptions="Center"
                   TextColor="{DynamicResource TextColor}"/>
                        <Entry Text="{Binding PriceFromText}" Placeholder="Min"
                   Keyboard="Numeric" WidthRequest="100" HeightRequest="42"
                   FontFamily="OpenSans-Regular" BackgroundColor="White"/>
                        <Label Text="đến" VerticalOptions="Center"
                   TextColor="{DynamicResource TextColor}"/>
                        <Entry Text="{Binding PriceToText}" Placeholder="Max"
                   Keyboard="Numeric" WidthRequest="100" HeightRequest="42"
                   FontFamily="OpenSans-Regular" BackgroundColor="White"/>
                    </HorizontalStackLayout>

                </HorizontalStackLayout>
            </Frame>


            <!-- Các nút chức năng -->
            <HorizontalStackLayout Spacing="12" HorizontalOptions="Start">
                <Button Text="Thêm"
                        Command="{Binding AddCommand}"
                        BackgroundColor="#3B82F6"
                        TextColor="White"
                        HeightRequest="48"
                        FontAttributes="Bold"
                        FontFamily="OpenSans-SemiBold">
                    <VisualStateManager.VisualStateGroups>
                        <VisualStateGroupList>
                            <VisualStateGroup x:Name="CommonStates">
                                <VisualState x:Name="Normal">
                                    <VisualState.Setters>
                                        <Setter Property="BackgroundColor" Value="#3B82F6" />
                                    </VisualState.Setters>
                                </VisualState>
                                <VisualState x:Name="Pressed">
                                    <VisualState.Setters>
                                        <Setter Property="BackgroundColor" Value="#2563EB" />
                                    </VisualState.Setters>
                                </VisualState>
                            </VisualStateGroup>
                        </VisualStateGroupList>
                    </VisualStateManager.VisualStateGroups>
                </Button>

                <Button Text="{Binding IsDeleteMode, Converter={StaticResource DeleteModeTextConverter}}"
                        Command="{Binding ToggleDeleteModeCommand}"
                        BackgroundColor="#3B82F6"
                        TextColor="White"
                        HeightRequest="48"
                        FontAttributes="Bold"
                        FontFamily="OpenSans-SemiBold">
                    <VisualStateManager.VisualStateGroups>
                        <VisualStateGroupList>
                            <VisualStateGroup x:Name="CommonStates">
                                <VisualState x:Name="Normal">
                                    <VisualState.Setters>
                                        <Setter Property="BackgroundColor" Value="#3B82F6" />
                                    </VisualState.Setters>
                                </VisualState>
                                <VisualState x:Name="Pressed">
                                    <VisualState.Setters>
                                        <Setter Property="BackgroundColor" Value="#2563EB" />
                                    </VisualState.Setters>
                                </VisualState>
                            </VisualStateGroup>
                        </VisualStateGroupList>
                    </VisualStateManager.VisualStateGroups>
                </Button>

                <Button Text="Xoá các mục đã chọn"
                        Command="{Binding DeleteCommand}"
                        IsVisible="{Binding IsDeleteMode}"
                        BackgroundColor="#EF4444"
                        TextColor="White"
                        HeightRequest="48"
                        FontAttributes="Bold"
                        FontFamily="OpenSans-SemiBold">
                    <VisualStateManager.VisualStateGroups>
                        <VisualStateGroupList>
                            <VisualStateGroup x:Name="CommonStates">
                                <VisualState x:Name="Normal">
                                    <VisualState.Setters>
                                        <Setter Property="BackgroundColor" Value="#EF4444" />
                                    </VisualState.Setters>
                                </VisualState>
                                <VisualState x:Name="Pressed">
                                    <VisualState.Setters>
                                        <Setter Property="BackgroundColor" Value="#DC2626" />
                                    </VisualState.Setters>
                                </VisualState>
                            </VisualStateGroup>
                        </VisualStateGroupList>
                    </VisualStateManager.VisualStateGroups>
                </Button>
            </HorizontalStackLayout>

            <!-- Tiêu đề cột -->
            <Frame HasShadow="True"
                   BackgroundColor="{DynamicResource CardBackgroundColor}"
                   Padding="20">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <!-- Cột cho CheckBox -->
                        <ColumnDefinition Width="0.7*" />
                        <!-- Cột STT -->
                        <ColumnDefinition Width="1*" />
                        <!-- Cột Tên Khách Hàng -->
                        <ColumnDefinition Width="1*" />
                        <!-- Cột CCCD -->
                        <ColumnDefinition Width="1*" />
                        <!-- Cột Email -->
                        <ColumnDefinition Width="1*" />
                        <!-- Cột Tên Xe -->
                        <ColumnDefinition Width="1*" />
                        <!-- Cột Biển Số Xe -->
                        <ColumnDefinition Width="1*" />
                        <!-- Cột Ngày Thu Tiền -->
                        <ColumnDefinition Width="1*" />
                        <!-- Cột Số Tiền Thu -->
                        <ColumnDefinition Width="0.5*" />
                        <!-- Cột Hành động -->
                    </Grid.ColumnDefinitions>
                    <Label Text="" Grid.Column="0" 
                           FontAttributes="Bold" 
                           FontFamily="OpenSans-SemiBold"
                           TextColor="{DynamicResource TextColor}"
                           HorizontalTextAlignment="Center"
                           FontSize="14"/>
                    <Label Text="STT" Grid.Column="1" 
                           FontAttributes="Bold" 
                           FontFamily="OpenSans-SemiBold"
                           TextColor="{DynamicResource TextColor}"
                           HorizontalTextAlignment="Center"
                           FontSize="14"/>
                    <Label Text="Tên Khách Hàng" Grid.Column="2" 
                           FontAttributes="Bold" 
                           FontFamily="OpenSans-SemiBold"
                           TextColor="{DynamicResource TextColor}"
                           HorizontalTextAlignment="Center"
                           FontSize="14"/>
                    <Label Text="CCCD" Grid.Column="3" 
                           FontAttributes="Bold" 
                           FontFamily="OpenSans-SemiBold"
                           TextColor="{DynamicResource TextColor}"
                           HorizontalTextAlignment="Center"
                           FontSize="14"/>
                    <Label Text="Email" Grid.Column="4" 
                           FontAttributes="Bold" 
                           FontFamily="OpenSans-SemiBold"
                           TextColor="{DynamicResource TextColor}"
                           HorizontalTextAlignment="Center"
                           FontSize="14"/>
                    <Label Text="Tên Xe" Grid.Column="5" 
                           FontAttributes="Bold" 
                           FontFamily="OpenSans-SemiBold"
                           TextColor="{DynamicResource TextColor}"
                           HorizontalTextAlignment="Center"
                           FontSize="14"/>
                    <Label Text="Biển Số Xe" Grid.Column="6" 
                           FontAttributes="Bold" 
                           FontFamily="OpenSans-SemiBold"
                           TextColor="{DynamicResource TextColor}"
                           HorizontalTextAlignment="Center"
                           FontSize="14"/>
                    <Label Text="Ngày Thu Tiền" Grid.Column="7" 
                           FontAttributes="Bold" 
                           FontFamily="OpenSans-SemiBold"
                           TextColor="{DynamicResource TextColor}"
                           HorizontalTextAlignment="Center"
                           FontSize="14"/>
                    <Label Text="Số Tiền Thu" Grid.Column="8" 
                           FontAttributes="Bold" 
                           FontFamily="OpenSans-SemiBold"
                           TextColor="{DynamicResource TextColor}"
                           HorizontalTextAlignment="Center"
                           FontSize="14"/>
                    <Label Text="Hành động" Grid.Column="9" 
                           FontAttributes="Bold" 
                           FontFamily="OpenSans-SemiBold"
                           TextColor="{DynamicResource TextColor}"
                           HorizontalTextAlignment="Center"
                           FontSize="14"/>
                </Grid>
            </Frame>

            <!-- Danh sách phiếu thu tiền -->
            <CollectionView ItemsSource="{Binding ListPhieuThuTien}">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame HasShadow="True"
                               BackgroundColor="{DynamicResource CardBackgroundColor}"
                               Padding="20"
                               Margin="0,12,0,0">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <!-- Cột cho CheckBox -->
                                    <ColumnDefinition Width="0.7*" />
                                    <!-- Cột STT -->
                                    <ColumnDefinition Width="1*" />
                                    <!-- Cột Tên Khách Hàng -->
                                    <ColumnDefinition Width="1*" />
                                    <!-- Cột CCCD -->
                                    <ColumnDefinition Width="1*" />
                                    <!-- Cột Email -->
                                    <ColumnDefinition Width="1*" />
                                    <!-- Cột Tên Xe -->
                                    <ColumnDefinition Width="1*" />
                                    <!-- Cột Biển Số Xe -->
                                    <ColumnDefinition Width="1*" />
                                    <!-- Cột Ngày Thu Tiền -->
                                    <ColumnDefinition Width="1*" />
                                    <!-- Cột Số Tiền Thu -->
                                    <ColumnDefinition Width="0.5*" />
                                    <!-- Cột Hành động -->
                                </Grid.ColumnDefinitions>
                                <CheckBox IsChecked="{Binding IsSelected}"
                                          Margin="10,0,0,0"
                                          IsVisible="{Binding Path=BindingContext.IsDeleteMode, Source={x:Reference RootContentView}}"
                                          Grid.Column="0" />
                                <Label VerticalOptions="Center"
                                       Text="{Binding STT}" Grid.Column="1" 
                                       FontFamily="OpenSans-Regular"
                                       TextColor="{DynamicResource TextColor}"
                                       FontSize="13"
                                       Margin="30,0,0,0"/>
                                <Label Text="{Binding TenKhachHang}" Grid.Column="2" 
                                       FontFamily="OpenSans-Regular"
                                       TextColor="{DynamicResource TextColor}"
                                       HorizontalTextAlignment="Center"
                                       VerticalOptions="Center"
                                       FontSize="13"
                                       Margin="5"/>
                                <Label Text="{Binding CCCD}" Grid.Column="3" 
                                       FontFamily="OpenSans-Regular"
                                       TextColor="{DynamicResource TextColor}"
                                       HorizontalTextAlignment="Center"
                                       VerticalOptions="Center"
                                       FontSize="13"
                                       Margin="5"/>
                                <Label Text="{Binding Email}" Grid.Column="4" 
                                       FontFamily="OpenSans-Regular"
                                       TextColor="{DynamicResource TextColor}"
                                       HorizontalTextAlignment="Center"
                                       VerticalOptions="Center"
                                       FontSize="13"
                                       Margin="5"/>
                                <Label Text="{Binding TenXe}" Grid.Column="5" 
                                       FontFamily="OpenSans-Regular"
                                       TextColor="{DynamicResource TextColor}"
                                       HorizontalTextAlignment="Center"
                                       VerticalOptions="Center"
                                       FontSize="13"
                                       Margin="5"/>
                                <Label Text="{Binding BienSoXe}" Grid.Column="6" 
                                       FontFamily="OpenSans-Regular"
                                       TextColor="{DynamicResource TextColor}"
                                       HorizontalTextAlignment="Center"
                                       VerticalOptions="Center"
                                       FontSize="13"
                                       Margin="5"/>
                                <Label Text="{Binding NgayThuTien, StringFormat='{0:dd/MM/yyyy}'}" Grid.Column="7" 
                                       FontFamily="OpenSans-Regular"
                                       TextColor="{DynamicResource TextColor}"
                                       HorizontalTextAlignment="Center"
                                       VerticalOptions="Center"
                                       FontSize="13"
                                       Margin="5"/>
                                <Label Text="{Binding SoTienThu, StringFormat='{0:N0} VNĐ'}" Grid.Column="8" 
                                       FontFamily="OpenSans-Regular"
                                       TextColor="{DynamicResource TextColor}"
                                       HorizontalTextAlignment="Center"
                                       VerticalOptions="Center"
                                       FontSize="13"
                                       Margin="5"/>
                                <Button Text="Sửa"
                                        Command="{Binding Source={x:Reference RootContentView}, Path=BindingContext.EditCommand}"
                                        CommandParameter="{Binding Id}"
                                        Grid.Column="9"
                                        BackgroundColor="#3B82F6"
                                        TextColor="White"
                                        HeightRequest="40"
                                        FontFamily="OpenSans-SemiBold">
                                    <VisualStateManager.VisualStateGroups>
                                        <VisualStateGroupList>
                                            <VisualStateGroup x:Name="CommonStates">
                                                <VisualState x:Name="Normal">
                                                    <VisualState.Setters>
                                                        <Setter Property="BackgroundColor" Value="#3B82F6" />
                                                    </VisualState.Setters>
                                                </VisualState>
                                                <VisualState x:Name="Pressed">
                                                    <VisualState.Setters>
                                                        <Setter Property="BackgroundColor" Value="#2563EB" />
                                                    </VisualState.Setters>
                                                </VisualState>
                                            </VisualStateGroup>
                                        </VisualStateGroupList>
                                    </VisualStateManager.VisualStateGroups>
                                </Button>
                            </Grid>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
                <CollectionView.ItemsLayout>
                    <LinearItemsLayout ItemSpacing="10" Orientation="Vertical"/>
                </CollectionView.ItemsLayout>
            </CollectionView>
        </VerticalStackLayout>
    </ScrollView>
</ContentView>