<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:pages="clr-namespace:GarageManagement.Pages"
             xmlns:service="clr-namespace:GarageManagement.Services"
             x:Class="GarageManagement.Pages.QuanLiPhieuTiepNhanXePage"
             x:Name="RootContentView"
             BackgroundColor="{DynamicResource BackgroundColor}">

    <!-- converter cho nút “Xoá / Huỷ” -->
    <ContentView.Resources>
        <ResourceDictionary>
            <service:DeleteModeTextConverter x:Key="DeleteModeTextConverter"/>
        </ResourceDictionary>
    </ContentView.Resources>

    <ScrollView>
        <VerticalStackLayout Padding="30"
                             Spacing="20"
                             MaximumWidthRequest="1000">

            <!-- ─────────── Tiêu đề ─────────── -->
            <Frame HasShadow="True"
                   Padding="20"
                   BackgroundColor="{DynamicResource CardBackgroundColor}">
                <Label Text="Quản Lí Phiếu Tiếp Nhận"
                       FontSize="18"
                       FontAttributes="Bold"
                       FontFamily="OpenSans-SemiBold"
                       TextColor="{DynamicResource TextColor}"/>
            </Frame>

            <Frame Padding="20" HasShadow="True"
                   BackgroundColor="{DynamicResource CardBackgroundColor}">
                <VerticalStackLayout Spacing="14">

                    <HorizontalStackLayout>
                        <!-- Biển số -->
                        <HorizontalStackLayout Spacing="6">
                            <Label Text="Biển số:"
           WidthRequest="75"
           VerticalOptions="Center"
           TextColor="{DynamicResource TextColor}" />
                            <Entry Text="{Binding BienSoFilter}"
           Placeholder="Biển số"
           WidthRequest="130"
           HeightRequest="42"
           BackgroundColor="{DynamicResource BackgroundColor}"/>
                        </HorizontalStackLayout>

                        <!-- CCCD -->
                        <HorizontalStackLayout Spacing="6">
                            <Label Text="CCCD:" Margin="20"
           WidthRequest="60"
           VerticalOptions="Center"
           TextColor="{DynamicResource TextColor}" />
                            <Entry Text="{Binding CccdFilter}"
           Placeholder="CCCD"
           WidthRequest="140"
           HeightRequest="42"
           BackgroundColor="{DynamicResource BackgroundColor}"/>
                        </HorizontalStackLayout>

                        <!-- Tên KH -->
                        <HorizontalStackLayout Spacing="6">
                            <Label Text="Tên KH:"
           WidthRequest="70"
           VerticalOptions="Center"
           TextColor="{DynamicResource TextColor}" />
                            <Entry Text="{Binding NameFilter}"
           Placeholder="Họ tên"
           WidthRequest="150"
           HeightRequest="42"
           BackgroundColor="{DynamicResource BackgroundColor}"/>
                        </HorizontalStackLayout>

                    </HorizontalStackLayout>


                    <!-- Bộ lọc ngày -->
                    <HorizontalStackLayout>
                        <Label Text="Lọc theo:" WidthRequest="70" VerticalOptions="Center"
TextColor="{DynamicResource TextColor}"/>
                        <Picker ItemsSource="{Binding DateFilterOptions}"
                                SelectedItem="{Binding SelectedDateOption}"
                                WidthRequest="150"
                                HeightRequest="42"
                                TextColor="{DynamicResource TextColor}"
                                BackgroundColor="{DynamicResource BackgroundColor}"
                                />
                        <Label Text="Chọn ngày:" WidthRequest="80" VerticalOptions="Center"
TextColor="{DynamicResource TextColor}" Margin="20"/>
                        <DatePicker Date="{Binding SelectedDate}"
                                    Format="dd/MM/yyyy"
                                    WidthRequest="150"
                                    HeightRequest="42"
                                    
                                    Background="{DynamicResource BackgroundColor}"
                                    TextColor="{DynamicResource TextColor}"/>
                    </HorizontalStackLayout>

                </VerticalStackLayout>
            </Frame>
    


            <!-- ─────────── Nút chức năng ─────────── -->
            <HorizontalStackLayout Spacing="12" HorizontalOptions="Start">
                <!-- Thêm -->
                <Button Text="Thêm"
                        Command="{Binding AddCommand}"
                        BackgroundColor="#3B82F6"
                        TextColor="White"
                        HeightRequest="48"
                        FontAttributes="Bold"
                        FontFamily="OpenSans-SemiBold"/>

                <!-- Bật / tắt chế độ xoá -->
                <Button Text="{Binding IsDeleteMode, Converter={StaticResource DeleteModeTextConverter}}"
                        Command="{Binding ToggleDeleteModeCommand}"
                        BackgroundColor="#3B82F6"
                        TextColor="White"
                        HeightRequest="48"
                        FontAttributes="Bold"
                        FontFamily="OpenSans-SemiBold"/>

                <!-- Xoá các mục đã chọn -->
                <Button Text="Xoá các mục đã chọn"
                        Command="{Binding DeleteCommand}"
                        IsVisible="{Binding IsDeleteMode}"
                        BackgroundColor="#EF4444"
                        TextColor="White"
                        HeightRequest="48"
                        FontAttributes="Bold"
                        FontFamily="OpenSans-SemiBold"/>
            </HorizontalStackLayout>

            <!-- ─────────── Header bảng ─────────── -->
            <Frame HasShadow="True"
                   Padding="20"
                   BackgroundColor="{DynamicResource CardBackgroundColor}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <!-- CheckBox -->
                        <ColumnDefinition Width="Auto"/>
                        <!-- STT -->
                        <ColumnDefinition Width="1.5*"/>
                        <!-- Ngày -->
                        <ColumnDefinition Width="1.2*"/>
                        <!-- Biển số -->
                        <ColumnDefinition Width="2*"/>
                        <!-- Chủ xe -->
                        <ColumnDefinition Width="*"/>
                        <!-- Tình trạng -->
                    </Grid.ColumnDefinitions>

                    <Label Text=""
                           Grid.Column="0"/>
                    <Label Text="STT"
                           Grid.Column="1"
                           FontAttributes="Bold"
                           FontFamily="OpenSans-SemiBold"
                           TextColor="{DynamicResource TextColor}"
                           HorizontalTextAlignment="Center"/>
                    <Label Text="Ngày tiếp nhận"
                           Grid.Column="2"
                           FontAttributes="Bold"
                           FontFamily="OpenSans-SemiBold"
                           TextColor="{DynamicResource TextColor}"
                           HorizontalTextAlignment="Center"/>
                    <Label Text="Biển số xe"
                           Grid.Column="3"
                           FontAttributes="Bold"
                           FontFamily="OpenSans-SemiBold"
                           TextColor="{DynamicResource TextColor}"
                           HorizontalTextAlignment="Center"/>
                    <Label Text="Chủ xe"
                           Grid.Column="4"
                           FontAttributes="Bold"
                           FontFamily="OpenSans-SemiBold"
                           TextColor="{DynamicResource TextColor}"
                           HorizontalTextAlignment="Center"/>
                    <Label Text="Tình trạng"
                           Grid.Column="5"
                           FontAttributes="Bold"
                           FontFamily="OpenSans-SemiBold"
                           TextColor="{DynamicResource TextColor}"
                           HorizontalTextAlignment="Center"/>
                </Grid>
            </Frame>

            <!-- ─────────── Danh sách ─────────── -->
            <CollectionView ItemsSource="{Binding ListPhieuTiepNhan}">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame HasShadow="True"
                               Padding="20"
                               Margin="0,12,0,0"
                               BackgroundColor="{DynamicResource CardBackgroundColor}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <!-- CheckBox -->
                                    <ColumnDefinition Width="Auto"/>
                                    <!-- STT -->
                                    <ColumnDefinition Width="1.5*"/>
                                    <ColumnDefinition Width="1.2*"/>
                                    <ColumnDefinition Width="2*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <!-- CheckBox chọn xoá -->
                                <CheckBox Grid.Column="0"
                                          IsChecked="{Binding IsSelected}"
                                          IsVisible="{Binding Path=BindingContext.IsDeleteMode,
                                                              Source={x:Reference RootContentView}}"/>

                                <Label Text="{Binding IdForUI}"
                                       Grid.Column="1"
                                       FontFamily="OpenSans-Regular"
                                       FontSize="13"
                                       TextColor="{DynamicResource TextColor}"
                                       VerticalOptions="Center"/>

                                <Label Text="{Binding NgayTiepNhan, StringFormat='{0:dd/MM/yyyy}'}"
                                       Grid.Column="2"
                                       FontFamily="OpenSans-Regular"
                                       FontSize="13"
                                       TextColor="{DynamicResource TextColor}"
                                       HorizontalTextAlignment="Center"
                                       VerticalOptions="Center"/>

                                <!-- Biển số – tap để xem xe -->
                                <Label Text="{Binding BienSoXe}"
                                       Grid.Column="3"
                                       TextColor="{DynamicResource TextColor}"
                                       FontFamily="OpenSans-Regular"
                                       FontSize="13"
                                       HorizontalTextAlignment="Center"
                                       VerticalOptions="Center"/>


                                <!-- Chủ xe – tap để xem KH -->
                                <Label Text="{Binding TenKhachHang}"
                                       Grid.Column="4"
                                       TextColor="{DynamicResource TextColor}"
                                       FontFamily="OpenSans-Regular"
                                       FontSize="13"
                                       HorizontalTextAlignment="Center"
                                       VerticalOptions="Center"/>


                                <Label Text="{Binding TinhTrang}"
                                       Grid.Column="5"
                                       FontFamily="OpenSans-Regular"
                                       FontSize="13"
                                       TextColor="{DynamicResource TextColor}"
                                       HorizontalTextAlignment="Center"
                                       VerticalOptions="Center"/>
                            </Grid>
                            <Frame.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding Source={x:Reference RootContentView},
                                       Path=BindingContext.ShowXeDetailCommand}"
                      CommandParameter="{Binding XeId}"/>
                            </Frame.GestureRecognizers>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
                <CollectionView.ItemsLayout>
                    <LinearItemsLayout Orientation="Vertical" ItemSpacing="10"/>
                </CollectionView.ItemsLayout>
            </CollectionView>

        </VerticalStackLayout>
    </ScrollView>
</ContentView>
