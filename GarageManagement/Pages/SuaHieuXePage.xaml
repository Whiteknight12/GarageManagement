<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GarageManagement.Pages.SuaHieuXePage">
    <ScrollView>
        <VerticalStackLayout
            Padding="20"
            Spacing="15">

            <Label
                TextColor="{DynamicResource TextColor}"
                Text="Sửa Hiệu Xe"
                FontSize="24"
                FontAttributes="Bold"
                HorizontalOptions="Center" />

            <Label
                TextColor="{DynamicResource TextColor}"
                Text="Tên hiệu xe:"
                FontSize="16" />

            <Entry
                TextColor="{DynamicResource TextColor}"
                x:Name="HieuXeEntry"
                Text="{Binding TenHieuXe}"
                Placeholder="Nhập tên hiệu xe"
                IsEnabled="{Binding IsEditing}"
                FontSize="16" />
            <Button
    Text="Sửa hiệu xe"
    BackgroundColor="CadetBlue"
    TextColor="White"
    FontSize="16"
    Command="{Binding ToggleUpdateCommand}" 
                IsVisible="{Binding IsReadOnly}"/>
            <Button
                Text="Lưu"
                BackgroundColor="CadetBlue"
                TextColor="White"
                FontSize="16"
                Command="{Binding UpdateHieuXeCommand}" IsVisible="{Binding IsUpdating}"/>
            <Button
    Text="Huỷ"
    BackgroundColor="CadetBlue"
    TextColor="White"
    FontSize="16"
    Command="{Binding CancelCommand}" IsVisible="{Binding IsUpdating}"/>

        </VerticalStackLayout>
    </ScrollView>
</ContentView>
