<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GarageManagement.Pages.SuaTaiKhoanPage">

    <ScrollView>
        <VerticalStackLayout
        Padding="20"
        Spacing="15">

            <Label
            TextColor="{DynamicResource TextColor}"
            Text="Sửa Tài Khoản"
            FontSize="24"
            FontAttributes="Bold"
            HorizontalOptions="Center" />

            <Label
            TextColor="{DynamicResource TextColor}"
            Text="Tên đăng nhập:"
            FontSize="16" />

            <Entry
            TextColor="{DynamicResource TextColor}"
            Text="{Binding TenDangNhap}"
            Placeholder="Nhập tên đăng nhập"
            FontSize="16" />

            <Label
                TextColor="{DynamicResource TextColor}"
                Text="Mật khẩu:"
                FontSize="16" />

            <Entry
                TextColor="{DynamicResource TextColor}"
                Text="{Binding MatKhau}"
                Placeholder="Nhập tên đăng nhập"
                FontSize="16" />

            <Button
            Text="Lưu"
            BackgroundColor="CadetBlue"
            TextColor="White"
            FontSize="16"
            Command="{Binding UpdateAccountCommand}" />

        </VerticalStackLayout>
    </ScrollView>
    
</ContentView>
