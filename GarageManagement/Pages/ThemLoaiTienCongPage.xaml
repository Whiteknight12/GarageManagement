<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GarageManagement.Pages.ThemLoaiTienCongPage"
             Title="Thêm Loại Tiền Công">
    <ContentPage.Resources>
        <ResourceDictionary>
            <Style x:Key="LabelStyle" TargetType="Label">
                <Setter Property="FontSize" Value="16" />
                <Setter Property="FontAttributes" Value="Bold" />
                <Setter Property="Margin" Value="0,10,0,0" />
            </Style>
            <Style x:Key="EntryStyle" TargetType="Entry">
                <Setter Property="FontSize" Value="14" />
                <Setter Property="Margin" Value="0,5,0,10" />
                <Setter Property="BackgroundColor" Value="#F5F5F5" />
                <Setter Property="HeightRequest" Value="40" />
            </Style>
            <Style x:Key="ButtonStyle" TargetType="Button">
                <Setter Property="BackgroundColor" Value="#2196F3" />
                <Setter Property="TextColor" Value="White" />
                <Setter Property="CornerRadius" Value="8" />
                <Setter Property="HeightRequest" Value="45" />
                <Setter Property="FontSize" Value="16" />
                <Setter Property="Margin" Value="5,10" />
            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">
            <!-- Header -->
            <Label Text="Thêm Loại Tiền Công" FontSize="22" FontAttributes="Bold" HorizontalOptions="Center" />

            <!-- Tên loại tiền công -->
            <Label Text="Tên loại tiền công:" Style="{StaticResource LabelStyle}" />
            <Entry Placeholder="Nhập tên loại tiền công..." Text="{Binding TenLoaiTienCong}" Style="{StaticResource EntryStyle}" />

            <!-- Đơn giá -->
            <Label Text="Đơn giá:" Style="{StaticResource LabelStyle}" />
            <Entry Placeholder="Nhập đơn giá..." Text="{Binding DonGiaLoaiTienCong}" Keyboard="Numeric" Style="{StaticResource EntryStyle}" />

            <!-- Buttons -->
            <HorizontalStackLayout Spacing="10">
                <Button Text="Lưu" Command="{Binding SaveCommand}" Style="{StaticResource ButtonStyle}" />
                <Button Text="Hủy" Command="{Binding CancelCommand}" Style="{StaticResource ButtonStyle}" BackgroundColor="#E53935" />
            </HorizontalStackLayout>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
