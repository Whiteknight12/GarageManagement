<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodel="clr-namespace:GarageManagement.ViewModels"
             xmlns:service="clr-namespace:GarageManagement.Services"
             x:Class="GarageManagement.Pages.ThemXePage"
             BackgroundColor="{DynamicResource BackgroundColor}">

    <ContentPage.Resources>
        <ResourceDictionary>
            <OnPlatform x:Key="CornerRadiusHandler" x:TypeArguments="x:Double">
                <On Platform="Android" Value="20" />
                <On Platform="iOS" Value="20" />
                <On Platform="Windows" Value="20" />
            </OnPlatform>
            <OnPlatform x:Key="ButtonCornerRadiusHandler" x:TypeArguments="x:Double">
                <On Platform="Android" Value="12" />
                <On Platform="iOS" Value="12" />
                <On Platform="Windows" Value="12" />
            </OnPlatform>
        </ResourceDictionary>
    </ContentPage.Resources>

    <ScrollView>
        <VerticalStackLayout Padding="30" Spacing="20" MaximumWidthRequest="1000">

            <!-- Header -->
            <Frame HasShadow="True"
                   BackgroundColor="{DynamicResource CardBackgroundColor}"
                   Padding="20"
                   CornerRadius="{StaticResource CornerRadiusHandler}">
                <VerticalStackLayout Spacing="12">
                    <Label Text="THÊM XE MỚI" 
                           FontSize="18" 
                           FontAttributes="Bold" 
                           FontFamily="OpenSans-SemiBold"
                           TextColor="{DynamicResource TextColor}"
                           HorizontalOptions="Center"/>
                </VerticalStackLayout>
            </Frame>

            <!-- Thông tin xe -->
            <Frame HasShadow="True"
                   BackgroundColor="{DynamicResource CardBackgroundColor}"
                   Padding="20"
                   CornerRadius="{StaticResource CornerRadiusHandler}">
                <VerticalStackLayout Spacing="16">
                    <!-- Tên xe -->
                    <Label Text="Tên xe" 
                           FontSize="16" 
                           FontAttributes="Bold" 
                           FontFamily="OpenSans-Regular"
                           TextColor="{DynamicResource TextColor}"/>
                    <Entry Placeholder="Nhập tên xe"
                           Text="{Binding TenXe}"
                           TextColor="{DynamicResource TextColor}"
                           BackgroundColor="{DynamicResource InputBackgroundColor}"
                           HeightRequest="50"/>

                    <!-- Hiệu xe -->
                    <Label Text="Hiệu xe" 
                           FontSize="16" 
                           FontAttributes="Bold" 
                           FontFamily="OpenSans-Regular"
                           TextColor="{DynamicResource TextColor}"/>
                    <Picker Title="Chọn hiệu xe"
                            ItemsSource="{Binding DanhSachHieuXe}"
                            ItemDisplayBinding="{Binding TenHieuXe}"
                            SelectedItem="{Binding SelectedHieuXe, Mode=TwoWay}"
                            TextColor="{DynamicResource TextColor}"
                            BackgroundColor="{DynamicResource InputBackgroundColor}"
                            HeightRequest="60"
                            TitleColor="{DynamicResource PlaceholderColor}"/>

                    <!-- Biển số xe -->
                    <Label Text="Biển số xe" 
                           FontSize="16" 
                           FontAttributes="Bold" 
                           FontFamily="OpenSans-Regular"
                           TextColor="{DynamicResource TextColor}"/>
                    <Entry Placeholder="Nhập biển số xe"
                           Text="{Binding BienSoXe}"
                           TextColor="{DynamicResource TextColor}"
                           BackgroundColor="{DynamicResource InputBackgroundColor}"
                           HeightRequest="50"/>

                </VerticalStackLayout>
            </Frame>

            <Frame HasShadow="True"
                   BackgroundColor="{DynamicResource CardBackgroundColor}"
                   Padding="20"
                   CornerRadius="{StaticResource CornerRadiusHandler}">
                <Grid RowSpacing="10" ColumnSpacing="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*" />
                        <ColumnDefinition Width="2*" />
                        <ColumnDefinition Width="1*" />
                    </Grid.ColumnDefinitions>

                    <Label Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3"
                           Text="Chọn khách hàng theo: Tên/Email/Số điện thoại"
                           FontSize="16"
                           FontAttributes="Bold"
                           FontFamily="OpenSans-Regular"
                           TextColor="{DynamicResource TextColor}"
                           VerticalOptions="Center"/>

                    <Picker Grid.Row="1" Grid.Column="0"
                            x:Name="FilterFieldPicker"
                            TitleColor="{DynamicResource PlaceholderColor}"
                            ItemsSource="{Binding FilterFields}"
                            SelectedItem="{Binding SelectedFilterField, Mode=TwoWay}"
                            ItemDisplayBinding="{Binding .}"
                            FontSize="16"
                            FontFamily="OpenSans-Regular"
                            TextColor="{DynamicResource TextColor}"
                            HeightRequest="45"
                            Margin="0,5,0,0"/>

                    <Entry Grid.Row="1" Grid.Column="1"
                           x:Name="FilterValueEntry"
                           Placeholder="Nhập giá trị lọc"
                           PlaceholderColor="{DynamicResource PlaceholderColor}"
                           Text="{Binding FilterValue, Mode=TwoWay}"
                           FontSize="16"
                           FontFamily="OpenSans-Regular"
                           TextColor="{DynamicResource TextColor}"
                           HeightRequest="45"
                           Margin="0,5,0,0"/>

                    <Button Grid.Row="1" Grid.Column="2"
                            Text="Lọc"
                            Command="{Binding FilterCommand}"
                            BackgroundColor="#3B82F6"
                            TextColor="White"
                            HeightRequest="48"
                            FontAttributes="Bold"
                            FontFamily="OpenSans-SemiBold"
                            CornerRadius="{StaticResource ButtonCornerRadiusHandler}">
                        <VisualStateManager.VisualStateGroups>
                            <VisualStateGroupList>
                                <VisualStateGroup x:Name="CommonStates">
                                    <VisualState x:Name="Normal">
                                        <VisualState.Setters>
                                            <Setter Property="BackgroundColor" Value="#3B82F6" />
                                        </VisualState.Setters>
                                    </VisualState>
                                    <VisualState x:Name="Pressed">
                                        <VisualState.Setters>
                                            <Setter Property="BackgroundColor" Value="#2563EB" />
                                        </VisualState.Setters>
                                    </VisualState>
                                </VisualStateGroup>
                            </VisualStateGroupList>
                        </VisualStateManager.VisualStateGroups>
                    </Button>
                </Grid>
            </Frame>

            <!-- Thông tin chủ xe nếu đã tồn tại -->
            <Frame IsVisible="{Binding ChuXeExist}"
                   HasShadow="True"
                   BackgroundColor="{DynamicResource CardBackgroundColor}"
                   Padding="20"
                   CornerRadius="{StaticResource CornerRadiusHandler}">
                <VerticalStackLayout Spacing="16">
                    <!-- Tiêu đề -->
                    <Label Text="Chủ xe đã tồn tại trong hệ thống"
                           FontSize="16"
                           FontAttributes="Bold"
                           FontFamily="OpenSans-SemiBold"
                           TextColor="{DynamicResource TextColor}"
                           HorizontalOptions="Start"/>

                    <!-- Thông tin chủ xe dạng bảng -->
                    <Grid RowDefinitions="Auto,Auto,Auto,Auto,Auto" 
      ColumnDefinitions="Auto,*" 
      RowSpacing="8" 
      ColumnSpacing="12">
                        <!-- Họ và tên -->
                        <Label Grid.Row="0" Grid.Column="0"
           Text="Họ và tên:" 
           FontAttributes="Bold"
           FontSize="20" 
           FontFamily="OpenSans-Regular"
           TextColor="{DynamicResource TextColor}"
           HorizontalOptions="Start"/>
                        <Label Grid.Row="0" Grid.Column="1"
           Text="{Binding HoVaTen}" 
           FontSize="20" 
           FontFamily="OpenSans-Regular"
           TextColor="{DynamicResource TextColor}"
           HorizontalOptions="Start"/>

                        <!-- Số điện thoại -->
                        <Label Grid.Row="1" Grid.Column="0"
           Text="Số điện thoại:" 
           FontAttributes="Bold"
           FontSize="20"  
           FontFamily="OpenSans-Regular"
           TextColor="{DynamicResource TextColor}"
           HorizontalOptions="Start"/>
                        <Label Grid.Row="1" Grid.Column="1"
           Text="{Binding SoDienThoai}" 
           FontSize="20" 
           FontFamily="OpenSans-Regular"
           TextColor="{DynamicResource TextColor}"
           HorizontalOptions="Start"/>

                        <!-- Địa chỉ -->
                        <Label Grid.Row="2" Grid.Column="0"
           Text="Địa chỉ:" 
           FontAttributes="Bold"
           FontSize="20" 
           FontFamily="OpenSans-Regular"
           TextColor="{DynamicResource TextColor}"
           HorizontalOptions="Start"/>
                        <Label Grid.Row="2" Grid.Column="1"
           Text="{Binding DiaChi}" 
           FontSize="20" 
           FontFamily="OpenSans-Regular"
           TextColor="{DynamicResource TextColor}"
           HorizontalOptions="Start"/>

                        <!-- Tuổi -->
                        <Label Grid.Row="3" Grid.Column="0"
           Text="Tuổi:" 
           FontAttributes="Bold"
           FontSize="20" 
           FontFamily="OpenSans-Regular"
           TextColor="{DynamicResource TextColor}"
           HorizontalOptions="Start"/>
                        <Label Grid.Row="3" Grid.Column="1"
           Text="{Binding Tuoi}" 
           FontSize="20" 
           FontFamily="OpenSans-Regular"
           TextColor="{DynamicResource TextColor}"
           HorizontalOptions="Start"/>

                        <!-- Email -->
                        <Label Grid.Row="4" Grid.Column="0"
           Text="Email:" 
           FontAttributes="Bold"
           FontSize="20" 
           FontFamily="OpenSans-Regular"
           TextColor="{DynamicResource TextColor}"
           HorizontalOptions="Start"/>
                        <Label Grid.Row="4" Grid.Column="1"
           Text="{Binding Email}" 
           FontSize="20" 
           FontFamily="OpenSans-Regular"
           TextColor="{DynamicResource TextColor}"
           HorizontalOptions="Start"/>
                    </Grid>

                    <!-- Nút Xem chi tiết -->
                    <Button Text="Xem chi tiết"
                            Command="{Binding XemChiTietChuXeCommand}"
                            BackgroundColor="#3B82F6"
                            TextColor="White"
                            HeightRequest="40"
                            FontFamily="OpenSans-SemiBold"
                            CornerRadius="{StaticResource ButtonCornerRadiusHandler}"
                            HorizontalOptions="Start">
                        <VisualStateManager.VisualStateGroups>
                            <VisualStateGroupList>
                                <VisualStateGroup x:Name="CommonStates">
                                    <VisualState x:Name="Normal">
                                        <VisualState.Setters>
                                            <Setter Property="BackgroundColor" Value="#3B82F6" />
                                        </VisualState.Setters>
                                    </VisualState>
                                    <VisualState x:Name="Pressed">
                                        <VisualState.Setters>
                                            <Setter Property="BackgroundColor" Value="#2563EB" />
                                        </VisualState.Setters>
                                    </VisualState>
                                </VisualStateGroup>
                            </VisualStateGroupList>
                        </VisualStateManager.VisualStateGroups>
                    </Button>
                </VerticalStackLayout>
            </Frame>

            <!-- Thông tin chủ xe mới -->
            <Frame IsVisible="{Binding ChuXeNotExist}"
                   HasShadow="True"
                   BackgroundColor="{DynamicResource CardBackgroundColor}"
                   Padding="20"
                   CornerRadius="{StaticResource CornerRadiusHandler}">
                <VerticalStackLayout Spacing="16">
                    <Label Text="Thêm thông tin chủ xe mới"
                           FontSize="16"
                           FontAttributes="Bold"
                           FontFamily="OpenSans-SemiBold"
                           TextColor="{DynamicResource TextColor}"/>

                    <Label Text="Họ và tên" 
                           FontSize="16" 
                           FontAttributes="Bold" 
                           FontFamily="OpenSans-Regular"
                           TextColor="{DynamicResource TextColor}"/>
                    <Entry Placeholder="Nhập họ và tên"
                           Text="{Binding HoVaTen}"
                           TextColor="{DynamicResource TextColor}"
                           BackgroundColor="{DynamicResource InputBackgroundColor}"
                           HeightRequest="50"/>

                    <Label Text="Tuổi" 
                           FontSize="16" 
                           FontAttributes="Bold" 
                           FontFamily="OpenSans-Regular"
                           TextColor="{DynamicResource TextColor}"/>
                    <Entry Placeholder="Nhập tuổi"
                           Text="{Binding Tuoi}"
                           TextColor="{DynamicResource TextColor}"
                           Keyboard="Numeric"
                           BackgroundColor="{DynamicResource InputBackgroundColor}"
                           HeightRequest="50"/>

                    <Label Text="Số điện thoại chủ xe" 
                           FontSize="16" 
                           FontAttributes="Bold" 
                           FontFamily="OpenSans-Regular"
                           TextColor="{DynamicResource TextColor}"/>
                    <Entry Placeholder="Nhập số điện thoại"
                           Text="{Binding SoDienThoai}"
                           TextColor="{DynamicResource TextColor}"
                           Keyboard="Telephone"
                           BackgroundColor="{DynamicResource InputBackgroundColor}"
                           HeightRequest="50"/>

                    <Label Text="Địa chỉ" 
                           FontSize="16" 
                           FontAttributes="Bold" 
                           FontFamily="OpenSans-Regular"
                           TextColor="{DynamicResource TextColor}"/>
                    <Entry Placeholder="Nhập địa chỉ"
                           Text="{Binding DiaChi}"
                           TextColor="{DynamicResource TextColor}"
                           BackgroundColor="{DynamicResource InputBackgroundColor}"
                           HeightRequest="50"/>

                    <Label Text="Email" 
                           FontSize="16" 
                           FontAttributes="Bold" 
                           FontFamily="OpenSans-Regular"
                           TextColor="{DynamicResource TextColor}"/>
                    <Entry Placeholder="Nhập email"
                           Text="{Binding Email}"
                           TextColor="{DynamicResource TextColor}"
                           Keyboard="Email"
                           BackgroundColor="{DynamicResource InputBackgroundColor}"
                           HeightRequest="50"/>
                </VerticalStackLayout>
            </Frame>

            <!-- Nút hành động -->
            <HorizontalStackLayout Spacing="12" HorizontalOptions="Start">
                <Button Text="Lưu Xe Mới"
                        Command="{Binding SaveButtonClickCommand}"
                        BackgroundColor="#2563EB"
                        TextColor="White"
                        HeightRequest="48"
                        FontAttributes="Bold"
                        FontFamily="OpenSans-SemiBold"
                        CornerRadius="{StaticResource ButtonCornerRadiusHandler}">
                    <VisualStateManager.VisualStateGroups>
                        <VisualStateGroupList>
                            <VisualStateGroup x:Name="CommonStates">
                                <VisualState x:Name="Normal">
                                    <VisualState.Setters>
                                        <Setter Property="BackgroundColor" Value="#2563EB" />
                                    </VisualState.Setters>
                                </VisualState>
                                <VisualState x:Name="Pressed">
                                    <VisualState.Setters>
                                        <Setter Property="BackgroundColor" Value="#1D4ED8" />
                                    </VisualState.Setters>
                                </VisualState>
                            </VisualStateGroup>
                        </VisualStateGroupList>
                    </VisualStateManager.VisualStateGroups>
                </Button>

                <Button Text="Quay lại"
                        Command="{Binding BackCommand}"
                        BackgroundColor="#6B7280"
                        TextColor="White"
                        HeightRequest="48"
                        FontAttributes="Bold"
                        FontFamily="OpenSans-SemiBold"
                        CornerRadius="{StaticResource ButtonCornerRadiusHandler}">
                    <VisualStateManager.VisualStateGroups>
                        <VisualStateGroupList>
                            <VisualStateGroup x:Name="CommonStates">
                                <VisualState x:Name="Normal">
                                    <VisualState.Setters>
                                        <Setter Property="BackgroundColor" Value="#6B7280" />
                                    </VisualState.Setters>
                                </VisualState>
                                <VisualState x:Name="Pressed">
                                    <VisualState.Setters>
                                        <Setter Property="BackgroundColor" Value="#4B5563" />
                                    </VisualState.Setters>
                                </VisualState>
                            </VisualStateGroup>
                        </VisualStateGroupList>
                    </VisualStateManager.VisualStateGroups>
                </Button>
            </HorizontalStackLayout>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>