<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GarageManagement.Pages.ThuTienPage"
             BackgroundColor="{DynamicResource BackgroundColor}">

    <ContentView.Resources>
        <ResourceDictionary>
            <OnPlatform x:Key="CornerRadiusHandler" x:TypeArguments="x:Double">
                <On Platform="Android" Value="20" />
                <On Platform="iOS" Value="20" />
                <On Platform="Windows" Value="20" />
            </OnPlatform>
            <OnPlatform x:Key="ButtonCornerRadiusHandler" x:TypeArguments="x:Double">
                <On Platform="Android" Value="12" />
                <On Platform="iOS" Value="12" />
                <On Platform="Windows" Value="12" />
            </OnPlatform>
        </ResourceDictionary>
    </ContentView.Resources>

    <ScrollView>
        <VerticalStackLayout Padding="30" Spacing="25" MaximumWidthRequest="800">
            <!-- Page Title -->
            <Frame HasShadow="True"
                   BackgroundColor="{DynamicResource CardBackgroundColor}"
                   Padding="20"
                   CornerRadius="{StaticResource CornerRadiusHandler}">
                <Label Text="THU TIỀN"
                       FontSize="20"
                       FontAttributes="Bold"
                       FontFamily="OpenSans-SemiBold"
                       TextColor="{DynamicResource TextColor}"
                       HorizontalOptions="Center"/>
            </Frame>

            <!-- Input Fields -->
            <Frame HasShadow="True"
                   BackgroundColor="{DynamicResource CardBackgroundColor}"
                   Padding="20"
                   CornerRadius="{StaticResource CornerRadiusHandler}">
                <VerticalStackLayout Spacing="12">
                    <!-- Chủ Xe -->
                    <Label Text="Họ và Tên Chủ Xe:"
                           FontSize="16"
                           FontAttributes="Bold"
                           FontFamily="OpenSans-Regular"
                           TextColor="{DynamicResource TextColor}"/>
                    <Picker ItemsSource="{Binding ListChuXe}"
                            SelectedItem="{Binding SelectedChuXe}"
                            SelectedIndexChanged="OnChuXeChanged"
                            Title="Chọn chủ xe"
                            TitleColor="{DynamicResource PlaceholderColor}"
                            ItemDisplayBinding="{Binding Fullname}"
                            FontSize="16"
                            FontFamily="OpenSans-Regular"
                            TextColor="{DynamicResource TextColor}"
                            HeightRequest="60"
                            Margin="0,5,0,0"
                            HorizontalOptions="Fill"/>

                    <!-- Biển Số Xe -->
                    <Label Text="Biển Số Xe:"
                           FontSize="16"
                           FontAttributes="Bold"
                           FontFamily="OpenSans-Regular"
                           TextColor="{DynamicResource TextColor}"/>
                    
                        <Picker ItemsSource="{Binding ListBienSo}"
                                SelectedItem="{Binding SelectedBienSo}"
                                ItemDisplayBinding="{Binding BienSo}"
                                Title="Chọn biển số xe"
                                TitleColor="{DynamicResource PlaceholderColor}"
                                FontSize="16"
                                FontFamily="OpenSans-Regular"
                                TextColor="{DynamicResource TextColor}"
                                HeightRequest="60"
                                Margin="0,5,0,0"
                                HorizontalOptions="Fill"/>
                    

                    <!-- Số Điện Thoại -->
                    <Label Text="Số Điện Thoại:"
                           FontSize="16"
                           FontAttributes="Bold"
                           FontFamily="OpenSans-Regular"
                           TextColor="{DynamicResource TextColor}"/>
                    <Entry Text="{Binding DienThoai, Mode=OneWay}"
                           FontSize="16"
                           FontFamily="OpenSans-Regular"
                           TextColor="{DynamicResource TextColor}"
                           HeightRequest="48"
                           Margin="0,5,0,0"
                           HorizontalOptions="Fill"/>

                    <!-- Email -->
                    <Label Text="Email:"
                           FontSize="16"
                           FontAttributes="Bold"
                           FontFamily="OpenSans-Regular"
                           TextColor="{DynamicResource TextColor}"/>
                    <Entry Text="{Binding Email, Mode=TwoWay}"
                           Placeholder="Nhập email"
                           PlaceholderColor="{DynamicResource PlaceholderColor}"
                           FontSize="16"
                           FontFamily="OpenSans-Regular"
                           TextColor="{DynamicResource TextColor}"
                           HeightRequest="48"
                           Margin="0,5,0,0"
                           HorizontalOptions="Fill"/>

                    <!-- Ngày Thu Tiền -->
                    <Label Text="Ngày Thu Tiền:"
                           FontSize="16"
                           FontAttributes="Bold"
                           FontFamily="OpenSans-Regular"
                           TextColor="{DynamicResource TextColor}"/>
                    <DatePicker Date="{Binding NgayThuTien}"
                                FontSize="16"
                                FontFamily="OpenSans-Regular"
                                TextColor="{DynamicResource TextColor}"
                                HeightRequest="48"
                                Margin="0,5,0,0"
                                HorizontalOptions="Fill"/>

                    <!-- Số Tiền Thu -->
                    <Label Text="Số Tiền Thu:"
                           FontSize="16"
                           FontAttributes="Bold"
                           FontFamily="OpenSans-Regular"
                           TextColor="{DynamicResource TextColor}"/>
                    <Entry Text="{Binding SoTienThu}"
                           Placeholder="Nhập số tiền"
                           PlaceholderColor="{DynamicResource PlaceholderColor}"
                           Keyboard="Numeric"
                           FontSize="16"
                           FontFamily="OpenSans-Regular"
                           TextColor="{DynamicResource TextColor}"
                           HeightRequest="48"
                           Margin="0,5,0,0"
                           HorizontalOptions="Fill"/>
                </VerticalStackLayout>
            </Frame>

            <!-- Buttons -->
            <Frame HasShadow="True"
                   BackgroundColor="{DynamicResource CardBackgroundColor}"
                   Padding="20"
                   CornerRadius="{StaticResource CornerRadiusHandler}">
                <HorizontalStackLayout Spacing="15" HorizontalOptions="Center">
                    <Button Text="Xác Nhận"
                            Command="{Binding XacNhanCommand}"
                            BackgroundColor="#10B981"
                            TextColor="White"
                            HeightRequest="48"
                            FontAttributes="Bold"
                            FontFamily="OpenSans-SemiBold"
                            CornerRadius="{StaticResource ButtonCornerRadiusHandler}">
                        <VisualStateManager.VisualStateGroups>
                            <VisualStateGroupList>
                                <VisualStateGroup x:Name="CommonStates">
                                    <VisualState x:Name="Normal">
                                        <VisualState.Setters>
                                            <Setter Property="BackgroundColor" Value="#10B981" />
                                        </VisualState.Setters>
                                    </VisualState>
                                    <VisualState x:Name="Pressed">
                                        <VisualState.Setters>
                                            <Setter Property="BackgroundColor" Value="#059669" />
                                        </VisualState.Setters>
                                    </VisualState>
                                </VisualStateGroup>
                            </VisualStateGroupList>
                        </VisualStateManager.VisualStateGroups>
                    </Button>
                    <Button Text="QUAY LẠI"
                            Command="{Binding GoBackCommand}"
                            BackgroundColor="#3B82F6"
                            TextColor="White"
                            HeightRequest="48"
                            FontAttributes="Bold"
                            FontFamily="OpenSans-SemiBold"
                            CornerRadius="{StaticResource ButtonCornerRadiusHandler}">
                        <VisualStateManager.VisualStateGroups>
                            <VisualStateGroupList>
                                <VisualStateGroup x:Name="CommonStates">
                                    <VisualState x:Name="Normal">
                                        <VisualState.Setters>
                                            <Setter Property="BackgroundColor" Value="#3B82F6" />
                                        </VisualState.Setters>
                                    </VisualState>
                                    <VisualState x:Name="Pressed">
                                        <VisualState.Setters>
                                            <Setter Property="BackgroundColor" Value="#2563EB" />
                                        </VisualState.Setters>
                                    </VisualState>
                                </VisualStateGroup>
                            </VisualStateGroupList>
                        </VisualStateManager.VisualStateGroups>
                    </Button>
                </HorizontalStackLayout>
            </Frame>
        </VerticalStackLayout>
    </ScrollView>
</ContentView>