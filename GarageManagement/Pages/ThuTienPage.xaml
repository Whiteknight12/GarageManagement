<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GarageManagement.Pages.ThuTienPage"
             BackgroundColor="{DynamicResource BackgroundColor}">

    <ContentView.Resources>
        <ResourceDictionary>
            <OnPlatform x:Key="CornerRadiusHandler" x:TypeArguments="x:Double">
                <On Platform="Android" Value="20" />
                <On Platform="iOS" Value="20" />
                <On Platform="Windows" Value="20" />
            </OnPlatform>
            <OnPlatform x:Key="ButtonCornerRadiusHandler" x:TypeArguments="x:Double">
                <On Platform="Android" Value="12" />
                <On Platform="iOS" Value="12" />
                <On Platform="Windows" Value="12" />
            </OnPlatform>
        </ResourceDictionary>
    </ContentView.Resources>

    <ScrollView>
        <VerticalStackLayout Padding="30" Spacing="25" MaximumWidthRequest="1000">

            <Frame HasShadow="True"
                   BackgroundColor="{DynamicResource CardBackgroundColor}"
                   Padding="20"
                   CornerRadius="{StaticResource CornerRadiusHandler}">
                <Label Text="THU TIỀN"
                       FontSize="35"
                       FontAttributes="Bold"
                       FontFamily="OpenSans-SemiBold"
                       TextColor="{DynamicResource TextColor}"
                       HorizontalOptions="Center"/>
            </Frame>

            <!-- Khu vực lọc -->
            <Frame HasShadow="True"
                   BackgroundColor="{DynamicResource CardBackgroundColor}"
                   Padding="20"
                   CornerRadius="{StaticResource CornerRadiusHandler}">
                <Grid RowSpacing="10" ColumnSpacing="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*" />
                        <ColumnDefinition Width="2*" />
                        <ColumnDefinition Width="1*" />
                    </Grid.ColumnDefinitions>

                    <Label Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3"
                           Text="Lọc khách hàng theo: Tên/Email/Số điện thoại"
                           FontSize="16"
                           FontAttributes="Bold"
                           FontFamily="OpenSans-Regular"
                           TextColor="{DynamicResource TextColor}"
                           VerticalOptions="Center"/>

                    <Picker Grid.Row="1" Grid.Column="0"
                            x:Name="FilterFieldPicker"
                            TitleColor="{DynamicResource PlaceholderColor}"
                            ItemsSource="{Binding FilterFields}"
                            SelectedItem="{Binding SelectedFilterField, Mode=TwoWay}"
                            ItemDisplayBinding="{Binding .}"
                            FontSize="16"
                            FontFamily="OpenSans-Regular"
                            TextColor="{DynamicResource TextColor}"
                            HeightRequest="45"
                            Margin="0,5,0,0"/>

                    <Entry Grid.Row="1" Grid.Column="1"
                           x:Name="FilterValueEntry"
                           Placeholder="Nhập giá trị lọc"
                           PlaceholderColor="{DynamicResource PlaceholderColor}"
                           Text="{Binding FilterValue, Mode=TwoWay}"
                           FontSize="16"
                           FontFamily="OpenSans-Regular"
                           TextColor="{DynamicResource TextColor}"
                           HeightRequest="45"
                           Margin="0,5,0,0"/>

                    <Button Grid.Row="1" Grid.Column="2"
                            Text="Lọc"
                            Command="{Binding FilterCommand}"
                            BackgroundColor="#3B82F6"
                            TextColor="White"
                            HeightRequest="48"
                            FontAttributes="Bold"
                            FontFamily="OpenSans-SemiBold"
                            CornerRadius="{StaticResource ButtonCornerRadiusHandler}">
                        <VisualStateManager.VisualStateGroups>
                            <VisualStateGroupList>
                                <VisualStateGroup x:Name="CommonStates">
                                    <VisualState x:Name="Normal">
                                        <VisualState.Setters>
                                            <Setter Property="BackgroundColor" Value="#3B82F6" />
                                        </VisualState.Setters>
                                    </VisualState>
                                    <VisualState x:Name="Pressed">
                                        <VisualState.Setters>
                                            <Setter Property="BackgroundColor" Value="#2563EB" />
                                        </VisualState.Setters>
                                    </VisualState>
                                </VisualStateGroup>
                            </VisualStateGroupList>
                        </VisualStateManager.VisualStateGroups>
                    </Button>
                </Grid>
            </Frame>
            <!-- Form nhập thông tin phiếu thu tiền -->
            <Frame HasShadow="True"
                BackgroundColor="{DynamicResource CardBackgroundColor}"
                Padding="20"
                CornerRadius="{StaticResource CornerRadiusHandler}">
                <Grid RowSpacing="10" ColumnSpacing="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <!-- Hàng cho nhãn -->
                        <RowDefinition Height="Auto" />
                        <!-- Hàng cho các trường nhập liệu -->
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*" />
                        <!-- Biển số xe -->
                        <ColumnDefinition Width="1*" />
                        <!-- Ngày thu tiền -->
                        <ColumnDefinition Width="1*" />
                        <!-- Số tiền thu -->
                    </Grid.ColumnDefinitions>

                    <!-- Nhãn cho từng trường -->
                    <Label Grid.Row="0" Grid.Column="0"
        Text="Biển Số Xe:"
        FontSize="16"
        FontAttributes="Bold"
        FontFamily="OpenSans-Regular"
        TextColor="{DynamicResource TextColor}"/>
                    <Label Grid.Row="0" Grid.Column="1"
        Text="Ngày Thu Tiền:"
        FontSize="16"
        FontAttributes="Bold"
        FontFamily="OpenSans-Regular"
        TextColor="{DynamicResource TextColor}"/>
                    <Label Grid.Row="0" Grid.Column="2"
        Text="Số Tiền Thu:"
        FontSize="16"
        FontAttributes="Bold"
        FontFamily="OpenSans-Regular"
        TextColor="{DynamicResource TextColor}"/>

                    <!-- Các trường nhập liệu -->
                    <Picker Grid.Row="1" Grid.Column="0"
         ItemsSource="{Binding ListBienSo}"
         SelectedItem="{Binding SelectedBienSo}"
         ItemDisplayBinding="{Binding BienSo}"
         TitleColor="{DynamicResource PlaceholderColor}"
         FontSize="16"
         FontFamily="OpenSans-Regular"
         TextColor="{DynamicResource TextColor}"
         HeightRequest="45"
         Margin="0,5,0,0"/>

                    <DatePicker Grid.Row="1" Grid.Column="1"
             Date="{Binding NgayThuTien}"
             FontSize="16"
             FontFamily="OpenSans-Regular"
             TextColor="{DynamicResource TextColor}"
             HeightRequest="48"
             Margin="0,5,0,0"/>

                    <Entry Grid.Row="1" Grid.Column="2"
        Text="{Binding SoTienThu}"
        Placeholder="Nhập số tiền"
        PlaceholderColor="{DynamicResource PlaceholderColor}"
        Keyboard="Numeric"
        FontSize="16"
        FontFamily="OpenSans-Regular"
        TextColor="{DynamicResource TextColor}"
        HeightRequest="48"
        Margin="0,5,0,0"/>
                </Grid>
            </Frame>
            <!-- Hiển thị thông tin khách hàng và thông tin xe -->
            <Frame HasShadow="True"
                   BackgroundColor="{DynamicResource CardBackgroundColor}"
                   Padding="20"
                   CornerRadius="{StaticResource CornerRadiusHandler}">
                <Grid RowSpacing="20" ColumnSpacing="30">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <!-- Tiêu đề -->
                        <RowDefinition Height="Auto" />
                        <!-- Thông tin khách hàng và xe -->
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*" />
                        <!-- Thông tin khách hàng -->
                        <ColumnDefinition Width="1*" />
                        <!-- Thông tin xe -->
                    </Grid.ColumnDefinitions>

                    <!-- Tiêu đề "Phiếu thu tiền" -->
                    <Label Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2"
                           Text="Phiếu thu tiền"
                           FontSize="30"
                           HorizontalOptions="Center"
                           FontAttributes="Bold"
                           FontFamily="OpenSans-Regular"
                           TextColor="{DynamicResource TextColor}"/>

                    <!-- Thông tin khách hàng -->
                    <VerticalStackLayout Grid.Row="1" Grid.Column="0"
                                         Spacing="12"
                                         IsVisible="{Binding IsCustomerFound}">
                        <Label Text="Thông tin khách hàng:"
                               FontSize="24"
                               FontAttributes="Bold"
                               FontFamily="OpenSans-Regular"
                               TextColor="{DynamicResource TextColor}"/>
                        <Label Text="Họ và Tên:"
                               FontSize="16"
                               FontAttributes="Bold"
                               FontFamily="OpenSans-Regular"
                               TextColor="{DynamicResource TextColor}"/>
                        <Label Text="{Binding SelectedChuXe.HoVaTen, StringFormat='{}{0}'}"
                               FontSize="16"
                               FontFamily="OpenSans-Regular"
                               TextColor="{DynamicResource TextColor}"
                               HorizontalOptions="Fill"/>

                        <Label Text="Số Điện Thoại:"
                               FontSize="16"
                               FontAttributes="Bold"
                               FontFamily="OpenSans-Regular"
                               TextColor="{DynamicResource TextColor}"/>
                        <Label Text="{Binding SelectedChuXe.SoDienThoai, StringFormat='{}{0}'}"
                               FontSize="16"
                               FontFamily="OpenSans-Regular"
                               TextColor="{DynamicResource TextColor}"
                               HorizontalOptions="Fill"/>

                        <Label Text="Email:"
                               FontSize="16"
                               FontAttributes="Bold"
                               FontFamily="OpenSans-Regular"
                               TextColor="{DynamicResource TextColor}"/>
                        <Label Text="{Binding SelectedChuXe.Email, StringFormat='{}{0}'}"
                               FontSize="16"
                               FontFamily="OpenSans-Regular"
                               TextColor="{DynamicResource TextColor}"
                               HorizontalOptions="Fill"/>
                    </VerticalStackLayout>

                    <!-- Thông tin xe -->
                    <VerticalStackLayout Grid.Row="1" Grid.Column="1"
                                         Spacing="12"
                                         IsVisible="{Binding IsCustomerFound}">
                        <Label Text="Thông tin xe:"
                               FontSize="24"
                               FontAttributes="Bold"
                               FontFamily="OpenSans-Regular"
                               TextColor="{DynamicResource TextColor}"/>
                        <Label Text="Tên xe:"
                               FontSize="16"
                               FontAttributes="Bold"
                               FontFamily="OpenSans-Regular"
                               TextColor="{DynamicResource TextColor}"/>
                        <Label Text="{Binding SelectedBienSo.Ten, StringFormat='{}{0}'}"
                               FontSize="16"
                               FontFamily="OpenSans-Regular"
                               TextColor="{DynamicResource TextColor}"
                               HorizontalOptions="Fill"/>

                        <Label Text="Biển số:"
                               FontSize="16"
                               FontAttributes="Bold"
                               FontFamily="OpenSans-Regular"
                               TextColor="{DynamicResource TextColor}"/>
                        <Label Text="{Binding SelectedBienSo.BienSo, StringFormat='{}{0}'}"
                               FontSize="16"
                               FontFamily="OpenSans-Regular"
                               TextColor="{DynamicResource TextColor}"
                               HorizontalOptions="Fill"/>

                        <Label Text="Tên hiệu xe:"
                               FontSize="16"
                               FontAttributes="Bold"
                               FontFamily="OpenSans-Regular"
                               TextColor="{DynamicResource TextColor}"/>
                        <Label Text="{Binding TenHieuXe, StringFormat='{}{0}'}"
                               FontSize="16"
                               FontFamily="OpenSans-Regular"
                               TextColor="{DynamicResource TextColor}"
                               HorizontalOptions="Fill"/>

                        <Label Text="Tiền nợ:"
                               FontSize="16"
                               FontAttributes="Bold"
                               FontFamily="OpenSans-Regular"
                               TextColor="{DynamicResource TextColor}"/>
                        <Label Text="{Binding SelectedBienSo.TienNo, StringFormat='{}{0} VNĐ'}"
                               FontSize="16"
                               FontFamily="OpenSans-Regular"
                               TextColor="{DynamicResource TextColor}"
                               HorizontalOptions="Fill"/>
                    </VerticalStackLayout>
                </Grid>
            </Frame>

            

            <Frame HasShadow="True"
                   BackgroundColor="{DynamicResource CardBackgroundColor}"
                   Padding="20"
                   CornerRadius="{StaticResource CornerRadiusHandler}">
                <HorizontalStackLayout Spacing="15" HorizontalOptions="Center">
                    <Button Text="Xác Nhận"
                            Command="{Binding XacNhanCommand}"
                            BackgroundColor="#10B981"
                            TextColor="White"
                            HeightRequest="48"
                            FontAttributes="Bold"
                            FontFamily="OpenSans-SemiBold"
                            CornerRadius="{StaticResource ButtonCornerRadiusHandler}">
                        <VisualStateManager.VisualStateGroups>
                            <VisualStateGroupList>
                                <VisualStateGroup x:Name="CommonStates">
                                    <VisualState x:Name="Normal">
                                        <VisualState.Setters>
                                            <Setter Property="BackgroundColor" Value="#10B981" />
                                        </VisualState.Setters>
                                    </VisualState>
                                    <VisualState x:Name="Pressed">
                                        <VisualState.Setters>
                                            <Setter Property="BackgroundColor" Value="#059669" />
                                        </VisualState.Setters>
                                    </VisualState>
                                </VisualStateGroup>
                            </VisualStateGroupList>
                        </VisualStateManager.VisualStateGroups>
                    </Button>
                    <Button Text="QUAY LẠI"
                            Command="{Binding GoBackCommand}"
                            BackgroundColor="#3B82F6"
                            TextColor="White"
                            HeightRequest="48"
                            FontAttributes="Bold"
                            FontFamily="OpenSans-SemiBold"
                            CornerRadius="{StaticResource ButtonCornerRadiusHandler}">
                        <VisualStateManager.VisualStateGroups>
                            <VisualStateGroupList>
                                <VisualStateGroup x:Name="CommonStates">
                                    <VisualState x:Name="Normal">
                                        <VisualState.Setters>
                                            <Setter Property="BackgroundColor" Value="#3B82F6" />
                                        </VisualState.Setters>
                                    </VisualState>
                                    <VisualState x:Name="Pressed">
                                        <VisualState.Setters>
                                            <Setter Property="BackgroundColor" Value="#2563EB" />
                                        </VisualState.Setters>
                                    </VisualState>
                                </VisualStateGroup>
                            </VisualStateGroupList>
                        </VisualStateManager.VisualStateGroups>
                    </Button>
                </HorizontalStackLayout>
            </Frame>
        </VerticalStackLayout>
    </ScrollView>
</ContentView>